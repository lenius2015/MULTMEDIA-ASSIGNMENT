<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Users & Roles - OMUNJU SHOPPERS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/admin.css">
</head>
<body>
    <div class="admin-layout">
        <%- include('./partials/sidebar', { currentPage: 'admin-users' }) %>

        <div class="admin-main">
            <%- include('./partials/header', { pageTitle: 'Admin Users & Roles' }) %>

            <main class="admin-content">
                <div class="admin-card">
                    <div class="card-header">
                        <h2 class="card-title">Admin Users</h2>
                        <button class="btn btn-primary" onclick="showModal('add-admin-modal')">
                            <i class="fas fa-plus"></i>
                            Add Admin User
                        </button>
                    </div>

                    <!-- Admin Users Table -->
                    <div class="admin-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th>Last Login</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <div style="display: flex; align-items: center; gap: 12px;">
                                            <div style="width: 40px; height: 40px; border-radius: 50%; background: linear-gradient(135deg, #667eea, #764ba2); display: flex; align-items: center; justify-content: center; color: white;">
                                                <i class="fas fa-user-shield"></i>
                                            </div>
                                            <div>
                                                <div style="font-weight: 500;">Super Admin</div>
                                                <div style="font-size: 0.75rem; color: #64748b;">ID: ADM-001</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>admin@omunjushoppers.com</td>
                                    <td><span class="status delivered">Super Admin</span></td>
                                    <td><span class="status delivered">Active</span></td>
                                    <td>2024-01-24 10:30 AM</td>
                                    <td>Jan 2023</td>
                                    <td>
                                        <div style="display: flex; gap: 8px;">
                                            <button class="btn btn-secondary btn-sm" onclick="editAdminUser(1)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-secondary btn-sm" onclick="managePermissions(1)">
                                                <i class="fas fa-key"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div style="display: flex; align-items: center; gap: 12px;">
                                            <img src="/images/admin2.jpg" alt="Product Manager" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;">
                                            <div>
                                                <div style="font-weight: 500;">Alice Johnson</div>
                                                <div style="font-size: 0.75rem; color: #64748b;">ID: ADM-002</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>alice@omunjushoppers.com</td>
                                    <td><span class="status pending">Product Manager</span></td>
                                    <td><span class="status delivered">Active</span></td>
                                    <td>2024-01-23 3:45 PM</td>
                                    <td>Mar 2023</td>
                                    <td>
                                        <div style="display: flex; gap: 8px;">
                                            <button class="btn btn-secondary btn-sm" onclick="editAdminUser(2)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-secondary btn-sm" onclick="managePermissions(2)">
                                                <i class="fas fa-key"></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm" onclick="deactivateAdmin(2)">
                                                <i class="fas fa-ban"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div style="display: flex; align-items: center; gap: 12px;">
                                            <img src="/images/admin3.jpg" alt="Order Manager" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;">
                                            <div>
                                                <div style="font-weight: 500;">Bob Smith</div>
                                                <div style="font-size: 0.75rem; color: #64748b;">ID: ADM-003</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>bob@omunjushoppers.com</td>
                                    <td><span class="status warning">Order Manager</span></td>
                                    <td><span class="status delivered">Active</span></td>
                                    <td>2024-01-22 9:15 AM</td>
                                    <td>Jun 2023</td>
                                    <td>
                                        <div style="display: flex; gap: 8px;">
                                            <button class="btn btn-secondary btn-sm" onclick="editAdminUser(3)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-secondary btn-sm" onclick="managePermissions(3)">
                                                <i class="fas fa-key"></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm" onclick="deactivateAdmin(3)">
                                                <i class="fas fa-ban"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Roles & Permissions -->
                <div class="admin-card">
                    <div class="card-header">
                        <h2 class="card-title">Roles & Permissions</h2>
                        <button class="btn btn-secondary" onclick="showModal('add-role-modal')">
                            <i class="fas fa-plus"></i>
                            Add Role
                        </button>
                    </div>

                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 24px;">
                        <div class="admin-card">
                            <h3 style="margin: 0 0 16px 0; color: #1e293b;">Super Admin</h3>
                            <p style="margin: 0 0 16px 0; color: #64748b;">Full access to all system features</p>
                            <div style="display: flex; flex-wrap: wrap; gap: 8px;">
                                <span class="status delivered">All Permissions</span>
                            </div>
                            <div style="margin-top: 16px;">
                                <button class="btn btn-secondary btn-sm" onclick="editRole(1)">
                                    <i class="fas fa-edit"></i>
                                    Edit Permissions
                                </button>
                            </div>
                        </div>

                        <div class="admin-card">
                            <h3 style="margin: 0 0 16px 0; color: #1e293b;">Product Manager</h3>
                            <p style="margin: 0 0 16px 0; color: #64748b;">Manage products, categories, and inventory</p>
                            <div style="display: flex; flex-wrap: wrap; gap: 8px;">
                                <span class="status pending">Products</span>
                                <span class="status pending">Categories</span>
                                <span class="status pending">Inventory</span>
                            </div>
                            <div style="margin-top: 16px;">
                                <button class="btn btn-secondary btn-sm" onclick="editRole(2)">
                                    <i class="fas fa-edit"></i>
                                    Edit Permissions
                                </button>
                            </div>
                        </div>

                        <div class="admin-card">
                            <h3 style="margin: 0 0 16px 0; color: #1e293b;">Order Manager</h3>
                            <p style="margin: 0 0 16px 0; color: #64748b;">Manage orders and customer service</p>
                            <div style="display: flex; flex-wrap: wrap; gap: 8px;">
                                <span class="status warning">Orders</span>
                                <span class="status warning">Customers</span>
                                <span class="status warning">Messages</span>
                            </div>
                            <div style="margin-top: 16px;">
                                <button class="btn btn-secondary btn-sm" onclick="editRole(3)">
                                    <i class="fas fa-edit"></i>
                                    Edit Permissions
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Add/Edit Admin User Modal -->
    <div class="modal" id="add-admin-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="admin-modal-title">Add New Admin User</h3>
                <button class="modal-close">&times;</button>
            </div>
            <form id="admin-form">
                <div class="form-group">
                    <label for="admin-name">Full Name *</label>
                    <input type="text" id="admin-name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="admin-email">Email Address *</label>
                    <input type="email" id="admin-email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="admin-password">Password *</label>
                    <input type="password" id="admin-password" name="password" required>
                </div>
                <div class="form-group">
                    <label for="admin-role">Role *</label>
                    <select id="admin-role" name="role" required>
                        <option value="">Select Role</option>
                        <option value="super-admin">Super Admin</option>
                        <option value="product-manager">Product Manager</option>
                        <option value="order-manager">Order Manager</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="admin-phone">Phone Number</label>
                    <input type="tel" id="admin-phone" name="phone">
                </div>
                <div class="form-group">
                    <label>
                        <input type="checkbox" id="admin-status" name="status" checked>
                        Active (user can login immediately)
                    </label>
                </div>
                <div style="display: flex; gap: 12px; justify-content: flex-end;">
                    <button type="button" class="btn btn-secondary" onclick="hideModal('add-admin-modal')">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Admin User</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Permissions Modal -->
    <div class="modal" id="permissions-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Manage Permissions - Alice Johnson</h3>
                <button class="modal-close">&times;</button>
            </div>
            <form id="permissions-form">
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 24px;">
                    <div>
                        <h4 style="margin-bottom: 16px;">Product Management</h4>
                        <label style="display: block; margin-bottom: 8px;">
                            <input type="checkbox" name="permissions[]" value="products.view" checked> View Products
                        </label>
                        <label style="display: block; margin-bottom: 8px;">
                            <input type="checkbox" name="permissions[]" value="products.create" checked> Create Products
                        </label>
                        <label style="display: block; margin-bottom: 8px;">
                            <input type="checkbox" name="permissions[]" value="products.edit" checked> Edit Products
                        </label>
                        <label style="display: block; margin-bottom: 8px;">
                            <input type="checkbox" name="permissions[]" value="products.delete" checked> Delete Products
                        </label>
                    </div>

                    <div>
                        <h4 style="margin-bottom: 16px;">Category Management</h4>
                        <label style="display: block; margin-bottom: 8px;">
                            <input type="checkbox" name="permissions[]" value="categories.view" checked> View Categories
                        </label>
                        <label style="display: block; margin-bottom: 8px;">
                            <input type="checkbox" name="permissions[]" value="categories.create" checked> Create Categories
                        </label>
                        <label style="display: block; margin-bottom: 8px;">
                            <input type="checkbox" name="permissions[]" value="categories.edit" checked> Edit Categories
                        </label>
                        <label style="display: block; margin-bottom: 8px;">
                            <input type="checkbox" name="permissions[]" value="categories.delete"> Delete Categories
                        </label>
                    </div>

                    <div>
                        <h4 style="margin-bottom: 16px;">Order Management</h4>
                        <label style="display: block; margin-bottom: 8px;">
                            <input type="checkbox" name="permissions[]" value="orders.view"> View Orders
                        </label>
                        <label style="display: block; margin-bottom: 8px;">
                            <input type="checkbox" name="permissions[]" value="orders.edit"> Update Orders
                        </label>
                        <label style="display: block; margin-bottom: 8px;">
                            <input type="checkbox" name="permissions[]" value="orders.refund"> Process Refunds
                        </label>
                    </div>

                    <div>
                        <h4 style="margin-bottom: 16px;">User Management</h4>
                        <label style="display: block; margin-bottom: 8px;">
                            <input type="checkbox" name="permissions[]" value="users.view"> View Users
                        </label>
                        <label style="display: block; margin-bottom: 8px;">
                            <input type="checkbox" name="permissions[]" value="users.edit"> Edit Users
                        </label>
                        <label style="display: block; margin-bottom: 8px;">
                            <input type="checkbox" name="permissions[]" value="users.block"> Block Users
                        </label>
                    </div>
                </div>

                <div style="display: flex; gap: 12px; justify-content: flex-end; margin-top: 24px;">
                    <button type="button" class="btn btn-secondary" onclick="hideModal('permissions-modal')">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Permissions</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Toast Container -->
    <div class="toast-container" id="toast-container"></div>

    <script src="/admin.js"></script>
    <script>
        function editAdminUser(id) {
            document.getElementById('admin-modal-title').textContent = 'Edit Admin User';
            showModal('add-admin-modal');
            // Populate form with user data
        }

        function managePermissions(id) {
            showModal('permissions-modal');
        }

        function deactivateAdmin(id) {
            showConfirm('Are you sure you want to deactivate this admin user?', function() {
                showToast('Admin user deactivated!', 'warning');
            });
        }

        function editRole(id) {
            showToast('Role editing coming soon!', 'info');
        }

        document.getElementById('admin-form').addEventListener('submit', function(e) {
            e.preventDefault();
            if (validateForm(this)) {
                showToast('Admin user saved successfully!', 'success');
                hideModal('add-admin-modal');
                this.reset();
            }
        });

        document.getElementById('permissions-form').addEventListener('submit', function(e) {
            e.preventDefault();
            showToast('Permissions updated successfully!', 'success');
            hideModal('permissions-modal');
        });
    </script>
</body>
</html>