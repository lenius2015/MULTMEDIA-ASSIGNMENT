<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders - OMUNJU SHOPPERS</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
    <style>
        :root {
            --primary-orange: #ff6b35;
            --primary-blue: #004e89;
            --accent-amber: #f77f00;
            --soft-orange: #ff8a65;
            --white: #ffffff;
            --light-gray: #f8f9fa;
            --medium-gray: #e0e0e0;
            --dark-gray: #666;
            --darker-gray: #1a1a1a;
            --success-green: #28a745;
            --error-red: #dc3545;
            --warning-orange: #ffc107;
            --shadow: 0 2px 4px rgba(0,0,0,0.08);
            --border-radius: 8px;
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--light-gray);
            color: var(--darker-gray);
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .page-header {
            background: var(--white);
            padding: 40px 0;
            text-align: center;
            margin-bottom: 30px;
        }

        .page-title {
            font-size: 2.5rem;
            color: var(--primary-orange);
            margin-bottom: 8px;
        }

        .page-subtitle {
            color: var(--dark-gray);
            font-size: 1.1rem;
        }

        .orders-container {
            background: var(--white);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            padding: 30px;
            min-height: 400px;
        }

        .orders-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid var(--soft-orange);
        }

        .orders-title {
            font-size: 1.5rem;
            color: var(--primary-blue);
        }

        .orders-count {
            color: var(--dark-gray);
            font-size: 0.95rem;
        }

        .orders-list {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .order-card {
            border: 1px solid var(--medium-gray);
            border-radius: var(--border-radius);
            overflow: hidden;
            transition: var(--transition);
        }

        .order-card:hover {
            box-shadow: var(--shadow);
        }

        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background: var(--light-gray);
            border-bottom: 1px solid var(--medium-gray);
        }

        .order-id {
            font-weight: 600;
            color: var(--primary-blue);
        }

        .order-status {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .status-pending {
            background: var(--warning-orange);
            color: #856404;
        }

        .status-processing {
            background: #17a2b8;
            color: white;
        }

        .status-shipped {
            background: var(--primary-blue);
            color: white;
        }

        .status-delivered {
            background: var(--success-green);
            color: white;
        }

        .status-cancelled {
            background: var(--error-red);
            color: white;
        }

        .order-body {
            padding: 20px;
        }

        .order-info {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }

        .order-info-item {
            display: flex;
            flex-direction: column;
        }

        .order-info-label {
            font-size: 0.85rem;
            color: var(--dark-gray);
            margin-bottom: 4px;
        }

        .order-info-value {
            font-weight: 500;
        }

        .order-items {
            border-top: 1px solid var(--medium-gray);
            padding-top: 15px;
            margin-top: 15px;
        }

        .order-item {
            display: flex;
            align-items: center;
            padding: 10px 0;
        }

        .order-item-image {
            width: 60px;
            height: 60px;
            border-radius: 4px;
            object-fit: cover;
            margin-right: 15px;
        }

        .order-item-details {
            flex: 1;
        }

        .order-item-name {
            font-weight: 500;
        }

        .order-item-qty {
            font-size: 0.9rem;
            color: var(--dark-gray);
        }

        .order-item-price {
            font-weight: 600;
            color: var(--primary-orange);
        }

        .order-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 15px;
            border-top: 1px solid var(--medium-gray);
            margin-top: 15px;
        }

        .order-total {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--primary-orange);
        }

        .order-actions {
            display: flex;
            gap: 10px;
        }

        .btn {
            padding: 8px 16px;
            border-radius: var(--border-radius);
            text-decoration: none;
            font-size: 0.9rem;
            cursor: pointer;
            transition: var(--transition);
            border: none;
        }

        .btn-primary {
            background: var(--primary-orange);
            color: var(--white);
        }

        .btn-primary:hover {
            background: var(--accent-amber);
        }

        .btn-secondary {
            background: var(--white);
            color: var(--primary-orange);
            border: 1px solid var(--primary-orange);
        }

        .btn-secondary:hover {
            background: var(--soft-orange);
        }

        .btn-danger {
            background: var(--error-red);
            color: var(--white);
        }

        .btn-danger:hover {
            background: #c82333;
        }

        .empty-orders {
            text-align: center;
            padding: 60px 20px;
        }

        .empty-orders i {
            font-size: 64px;
            color: var(--medium-gray);
            margin-bottom: 20px;
        }

        .empty-orders h3 {
            font-size: 1.5rem;
            color: var(--dark-gray);
            margin-bottom: 12px;
        }

        .empty-orders p {
            color: var(--dark-gray);
            margin-bottom: 24px;
        }

        .loading {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 60px;
        }

        .loading i {
            font-size: 2rem;
            color: var(--primary-orange);
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        @media (max-width: 768px) {
            .order-header {
                flex-direction: column;
                gap: 10px;
                align-items: flex-start;
            }

            .order-footer {
                flex-direction: column;
                gap: 15px;
            }

            .order-actions {
                width: 100%;
            }

            .order-actions .btn {
                flex: 1;
                text-align: center;
            }
        }
    </style>
</head>
<body data-user='<%- JSON.stringify(typeof user !== "undefined" ? user : null) %>'>
    <!-- Navigation Bar -->
    <%- include('./partials/header', { page: 'orders', user: user }) %>

    <!-- Page Header -->
    <div class="page-header">
        <div class="container">
            <h1 class="page-title">My Orders</h1>
            <p class="page-subtitle">Track and manage your orders</p>
        </div>
    </div>

    <!-- Orders Content -->
    <div class="container">
        <div class="orders-container">
            <div class="orders-header">
                <h2 class="orders-title">Order History</h2>
                <span class="orders-count" id="ordersCount">Loading...</span>
            </div>

            <div id="ordersList">
                <div class="loading">
                    <i class="fas fa-spinner"></i>
                    <p>Loading your orders...</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer') %>

    <script>
        // Load orders on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadOrders();
        });

        async function loadOrders() {
            const ordersListEl = document.getElementById('ordersList');
            const ordersCountEl = document.getElementById('ordersCount');

            try {
                const response = await fetch('/api/orders');
                const result = await response.json();

                if (result.success) {
                    const orders = result.orders || [];
                    ordersCountEl.textContent = `${orders.length} order${orders.length !== 1 ? 's' : ''}`;

                    if (orders.length === 0) {
                        ordersListEl.innerHTML = `
                            <div class="empty-orders">
                                <i class="fas fa-shopping-bag"></i>
                                <h3>No orders yet</h3>
                                <p>Start shopping to see your orders here</p>
                                <a href="/dashboard" class="btn btn-primary">
                                    <i class="fas fa-shopping-bag"></i> Start Shopping
                                </a>
                            </div>
                        `;
                    } else {
                        renderOrders(orders);
                    }
                } else {
                    ordersListEl.innerHTML = `
                        <div class="empty-orders">
                            <i class="fas fa-exclamation-triangle"></i>
                            <h3>Unable to load orders</h3>
                            <p>${result.message || 'Please try again later'}</p>
                            <button onclick="loadOrders()" class="btn btn-primary">
                                <i class="fas fa-redo"></i> Retry
                            </button>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Error loading orders:', error);
                ordersListEl.innerHTML = `
                    <div class="empty-orders">
                        <i class="fas fa-exclamation-triangle"></i>
                        <h3>Unable to load orders</h3>
                        <p>Please check your connection and try again</p>
                        <button onclick="loadOrders()" class="btn btn-primary">
                            <i class="fas fa-redo"></i> Retry
                        </button>
                    </div>
                `;
            }
        }

        function renderOrders(orders) {
            const ordersListEl = document.getElementById('ordersList');

            const ordersHTML = orders.map(order => {
                const statusClass = `status-${order.status}`;
                const statusLabel = order.status.charAt(0).toUpperCase() + order.status.slice(1).replace('_', ' ');
                const total = parseFloat(order.total_amount) || 0;
                const createdAt = new Date(order.created_at).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });

                // Parse product names
                let itemsHtml = '';
                try {
                    const productNames = order.product_names ? order.product_names.split(',') : [];
                    const productIds = order.product_ids ? order.product_ids.split(',') : [];
                    
                    itemsHtml = productNames.map((name, index) => `
                        <div class="order-item">
                            <img src="/images/category-placeholder.jpg" alt="${name}" class="order-item-image"
                                 onerror="this.src='/images/category-placeholder.jpg'">
                            <div class="order-item-details">
                                <div class="order-item-name">${name}</div>
                            </div>
                            <div class="order-item-price">TSH ${total.toLocaleString()}</div>
                        </div>
                    `).join('');
                } catch (e) {
                    itemsHtml = '<p>Order items</p>';
                }

                // Cancel button if order is pending
                const cancelBtn = order.status === 'pending' ? `
                    <button class="btn btn-danger" onclick="cancelOrder(${order.id})">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                ` : '';

                return `
                    <div class="order-card">
                        <div class="order-header">
                            <span class="order-id">Order #${order.id}</span>
                            <span class="order-status ${statusClass}">${statusLabel}</span>
                        </div>
                        <div class="order-body">
                            <div class="order-info">
                                <div class="order-info-item">
                                    <span class="order-info-label">Date</span>
                                    <span class="order-info-value">${createdAt}</span>
                                </div>
                                <div class="order-info-item">
                                    <span class="order-info-label">Payment</span>
                                    <span class="order-info-value">${formatPaymentMethod(order.payment_method)}</span>
                                </div>
                                <div class="order-info-item">
                                    <span class="order-info-label">Shipping to</span>
                                    <span class="order-info-value">${order.shipping_city || '---'}</span>
                                </div>
                            </div>
                            <div class="order-items">
                                ${itemsHtml}
                            </div>
                            <div class="order-footer">
                                <div class="order-total">
                                    Total: TSH ${total.toLocaleString()}
                                </div>
                                <div class="order-actions">
                                    <a href="/order/${order.id}" class="btn btn-secondary">
                                        <i class="fas fa-eye"></i> View Details
                                    </a>
                                    ${cancelBtn}
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');

            ordersListEl.innerHTML = `<div class="orders-list">${ordersHTML}</div>`;
        }

        function formatPaymentMethod(method) {
            const methods = {
                'cash_on_delivery': 'Cash on Delivery',
                'mobile_money': 'Mobile Money',
                'bank_transfer': 'Bank Transfer'
            };
            return methods[method] || method;
        }

        async function cancelOrder(orderId) {
            if (!confirm('Are you sure you want to cancel this order?')) {
                return;
            }

            try {
                const response = await fetch(`/api/orders/${orderId}/cancel`, {
                    method: 'POST'
                });

                const result = await response.json();

                if (result.success) {
                    showNotification('Order cancelled successfully', 'success');
                    loadOrders(); // Reload orders
                } else {
                    showNotification(result.message || 'Failed to cancel order', 'error');
                }
            } catch (error) {
                console.error('Error cancelling order:', error);
                showNotification('Failed to cancel order', 'error');
            }
        }

        function showNotification(message, type = 'info') {
            const existingNotification = document.querySelector('.custom-notification');
            if (existingNotification) {
                existingNotification.remove();
            }

            const notification = document.createElement('div');
            notification.className = `custom-notification ${type}`;
            notification.innerHTML = `<i class="fas fa-info-circle"></i><span>${message}</span>`;
            document.body.appendChild(notification);

            setTimeout(() => notification.classList.add('show'), 100);
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }
    </script>
</body>
</html>
