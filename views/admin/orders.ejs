<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Management - OMUNJU SHOPPERS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/admin.css">
</head>
<body>
    <div class="admin-layout">
        <%- include('./partials/sidebar', { currentPage: 'orders' }) %>

        <div class="admin-main">
            <%- include('./partials/header', { pageTitle: 'Order Management' }) %>

            <main class="admin-content">
                <div class="admin-card">
                    <div class="card-header">
                        <h2 class="card-title">Orders</h2>
                        <div style="display: flex; gap: 12px;">
                            <button class="btn btn-secondary" onclick="showModal('filter-orders-modal')">
                                <i class="fas fa-filter"></i>
                                Filter
                            </button>
                            <button class="btn btn-primary" onclick="exportOrders()">
                                <i class="fas fa-download"></i>
                                Export
                            </button>
                        </div>
                    </div>

                    <!-- Filters -->
                    <div style="margin-bottom: 24px; display: flex; gap: 12px; flex-wrap: wrap;">
                        <select class="form-group" style="margin: 0; flex: 1; min-width: 150px;">
                            <option value="">All Status</option>
                            <option value="incomplete_order">Incomplete Order</option>
                            <option value="pending">Pending</option>
                            <option value="paid">Paid</option>
                            <option value="confirmed">Confirmed</option>
                            <option value="processing">Processing</option>
                            <option value="shipped">Shipped</option>
                            <option value="delivery_requested">Delivery Requested</option>
                            <option value="delivered">Delivered</option>
                            <option value="cancelled">Cancelled</option>
                        </select>
                        <select class="form-group" style="margin: 0; flex: 1; min-width: 150px;">
                            <option value="">All Payment Methods</option>
                            <option value="card">Credit Card</option>
                            <option value="paypal">PayPal</option>
                            <option value="bank">Bank Transfer</option>
                        </select>
                        <input type="date" class="form-group" style="margin: 0; flex: 1; min-width: 150px;">
                        <input type="text" placeholder="Search orders..." class="form-group" style="margin: 0; flex: 2; min-width: 200px;">
                    </div>

                    <!-- Orders Table -->
                    <div class="admin-table">
                        <table>
                            <thead>
                                <tr>
                                    <th data-sort="id">Order ID</th>
                                    <th data-sort="customer">Customer</th>
                                    <th data-sort="date">Date</th>
                                    <th data-sort="total">Total</th>
                                    <th data-sort="status">Status</th>
                                    <th data-sort="payment">Payment</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orders.forEach(order => { %>
                                <tr>
                                    <td><strong>#<%= order.id %></strong></td>
                                    <td>
                                        <div>
                                            <div><%= order.customer_name || 'Unknown' %></div>
                                            <div style="font-size: 0.75rem; color: #64748b;"><%= order.customer_email || '' %></div>
                                        </div>
                                    </td>
                                    <td><%= new Date(order.created_at).toLocaleDateString() %></td>
                                    <td>$<%= order.total_amount %></td>
                                    <td>
                                        <span class="status <%
                                            const statusClasses = {
                                                'incomplete_order': 'pending',
                                                'pending': 'pending',
                                                'paid': 'delivered',
                                                'confirmed': 'delivered',
                                                'processing': 'warning',
                                                'shipped': 'processing',
                                                'delivery_requested': 'warning',
                                                'delivered': 'delivered',
                                                'cancelled': 'cancelled'
                                            };
                                        %><%= statusClasses[order.status] || 'pending' %>">
                                            <%= order.status.replace('_', ' ').replace(/\b\w/g, l => l.toUpperCase()) %>
                                        </span>
                                    </td>
                                    <td>Credit Card</td>
                                    <td>
                                        <div style="display: flex; gap: 8px;">
                                            <button class="btn btn-secondary btn-sm" onclick="viewOrder('<%= order.id %>')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-primary btn-sm" onclick="updateOrderStatus('<%= order.id %>')">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                                <% if (orders.length === 0) { %>
                                <tr>
                                    <td colspan="7" style="text-align: center; color: #64748b;">No orders found</td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div style="margin-top: 24px; display: flex; justify-content: between; align-items: center;">
                        <div>Showing 1-10 of 1,234 orders</div>
                        <div style="display: flex; gap: 8px;">
                            <button class="btn btn-secondary">Previous</button>
                            <button class="btn btn-primary">1</button>
                            <button class="btn btn-secondary">2</button>
                            <button class="btn btn-secondary">3</button>
                            <button class="btn btn-secondary">Next</button>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Order Details Modal -->
    <div class="modal" id="order-details-modal">
        <div class="modal-content" style="max-width: 800px;">
            <div class="modal-header">
                <h3 class="modal-title">Order Details - <span id="order-id">#ORD-2024-001</span></h3>
                <button class="modal-close">&times;</button>
            </div>
            <div id="order-details-content">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 24px; margin-bottom: 24px;">
                    <div>
                        <h4>Customer Information</h4>
                        <p><strong>Name:</strong> John Doe</p>
                        <p><strong>Email:</strong> john@example.com</p>
                        <p><strong>Phone:</strong> +1 234 567 8900</p>
                        <p><strong>Address:</strong> 123 Main St, City, State 12345</p>
                    </div>
                    <div>
                        <h4>Order Information</h4>
                        <p><strong>Order Date:</strong> January 24, 2024</p>
                        <p><strong>Status:</strong> <span class="status pending">Pending</span></p>
                        <p><strong>Payment Method:</strong> Credit Card</p>
                        <p><strong>Total:</strong> $129.99</p>
                    </div>
                </div>

                <h4>Order Items</h4>
                <div class="admin-table" style="margin-bottom: 24px;">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Premium Cotton T-Shirt</td>
                                <td>2</td>
                                <td>$29.99</td>
                                <td>$59.98</td>
                            </tr>
                            <tr>
                                <td>Designer Jeans</td>
                                <td>1</td>
                                <td>$70.01</td>
                                <td>$70.01</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" style="text-align: right;"><strong>Subtotal:</strong></td>
                                <td>$129.99</td>
                            </tr>
                            <tr>
                                <td colspan="3" style="text-align: right;"><strong>Shipping:</strong></td>
                                <td>$0.00</td>
                            </tr>
                            <tr>
                                <td colspan="3" style="text-align: right;"><strong>Total:</strong></td>
                                <td><strong>$129.99</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <div style="display: flex; gap: 12px; justify-content: flex-end;">
                    <button class="btn btn-secondary" onclick="printOrder()">Print Invoice</button>
                    <button class="btn btn-primary" onclick="updateOrderStatusFromModal()">Update Status</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Update Status Modal -->
    <div class="modal" id="update-status-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Update Order Status</h3>
                <button class="modal-close">&times;</button>
            </div>
            <form id="status-update-form">
                <div class="form-group">
                    <label for="order-status">New Status</label>
                    <select id="order-status" name="status" required>
                        <option value="incomplete_order">Incomplete Order</option>
                        <option value="pending">Pending</option>
                        <option value="paid">Paid</option>
                        <option value="confirmed">Confirmed</option>
                        <option value="processing">Processing</option>
                        <option value="shipped">Shipped</option>
                        <option value="delivery_requested">Delivery Requested</option>
                        <option value="delivered">Delivered</option>
                        <option value="cancelled">Cancelled</option>
                    </select>
                </div>

                <!-- Delivery Information (shown when shipping/delivering) -->
                <div id="delivery-fields" style="display: none;">
                    <div class="form-group">
                        <label for="delivery-agent">Delivery Agent</label>
                        <input type="text" id="delivery-agent" name="delivery_agent" placeholder="Agent name">
                    </div>
                    <div class="form-group">
                        <label for="tracking-number">Tracking Number</label>
                        <input type="text" id="tracking-number" name="tracking_number" placeholder="Tracking number">
                    </div>
                    <div class="form-group">
                        <label for="estimated-delivery">Estimated Delivery Date</label>
                        <input type="date" id="estimated-delivery" name="estimated_delivery">
                    </div>
                </div>

                <div class="form-group">
                    <label for="status-note">Note (optional)</label>
                    <textarea id="status-note" name="note" rows="3" placeholder="Add a note for the customer..."></textarea>
                </div>
                <div style="display: flex; gap: 12px; justify-content: flex-end;">
                    <button type="button" class="btn btn-secondary" onclick="hideModal('update-status-modal')">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Status</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Toast Container -->
    <div class="toast-container" id="toast-container"></div>

    <script src="/admin.js"></script>
    <script>
        function viewOrder(orderId) {
            document.getElementById('order-id').textContent = '#' + orderId;
            showModal('order-details-modal');
        }

        function updateOrderStatus(orderId) {
            document.getElementById('status-update-form').setAttribute('data-order-id', orderId);
            showModal('update-status-modal');
        }

        function updateOrderStatusFromModal() {
            hideModal('order-details-modal');
            updateOrderStatus();
        }

        function exportOrders() {
            showToast('Exporting orders...', 'info');
            // Export logic here
            setTimeout(() => showToast('Orders exported successfully!', 'success'), 2000);
        }

        function printOrder() {
            window.print();
        }

        // Show/hide delivery fields based on status
        document.getElementById('order-status').addEventListener('change', function() {
            const deliveryFields = document.getElementById('delivery-fields');
            const selectedStatus = this.value;

            // Show delivery fields for shipping and delivery statuses
            if (['shipped', 'delivered'].includes(selectedStatus)) {
                deliveryFields.style.display = 'block';
            } else {
                deliveryFields.style.display = 'none';
            }
        });

        document.getElementById('status-update-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const orderId = this.getAttribute('data-order-id');
            const formData = new FormData(this);
            const data = {
                status: formData.get('status'),
                delivery_agent: formData.get('delivery_agent'),
                tracking_number: formData.get('tracking_number'),
                estimated_delivery: formData.get('estimated_delivery')
            };

            fetch(`/admin/orders/${orderId}/status`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showToast('Order status updated successfully!', 'success');
                    hideModal('update-status-modal');
                    this.reset();
                    this.removeAttribute('data-order-id');
                    document.getElementById('delivery-fields').style.display = 'none';
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showToast(data.message || 'Failed to update order status', 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('Failed to update order status', 'error');
            });
        });
    </script>

    <script src="/admin-buttons.js"></script>
</body>
</html>