<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Auctions - OMUNJU SHOPPERS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
    <style>
        /* Auction Season Styles */
        .auction-hero {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 80px 0;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .auction-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="75" cy="75" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="50" cy="10" r="0.5" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
            opacity: 0.1;
        }

        .auction-hero-content {
            position: relative;
            z-index: 2;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .auction-season-image {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid rgba(255,255,255,0.3);
            margin: 0 auto 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        .auction-season-title {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 15px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .auction-season-description {
            font-size: 1.3rem;
            margin-bottom: 30px;
            opacity: 0.9;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.6;
        }

        .auction-season-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 30px;
            max-width: 800px;
            margin: 0 auto;
        }

        .season-detail-item {
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 25px;
            border: 1px solid rgba(255,255,255,0.2);
        }

        .season-detail-label {
            font-size: 0.9rem;
            opacity: 0.8;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .season-detail-value {
            font-size: 1.5rem;
            font-weight: 600;
        }

        .season-status {
            display: inline-block;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            margin-top: 10px;
        }

        .status-active { background: rgba(39, 174, 96, 0.2); color: #27ae60; }
        .status-upcoming { background: rgba(52, 152, 219, 0.2); color: #3498db; }
        .status-ended { background: rgba(231, 76, 60, 0.2); color: #e74c3c; }

        /* Auction Sections */
        .auction-section {
            padding: 80px 0;
        }

        .section-header {
            text-align: center;
            margin-bottom: 50px;
        }

        .section-title {
            font-size: 2.5rem;
            color: #2c3e50;
            margin-bottom: 15px;
            position: relative;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            border-radius: 2px;
        }

        .section-subtitle {
            font-size: 1.1rem;
            color: #7f8c8d;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Active Auctions */
        .auctions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 30px;
            margin-bottom: 50px;
        }

        .auction-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            overflow: hidden;
            transition: all 0.3s ease;
            position: relative;
        }

        .auction-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
        }

        .auction-image {
            width: 100%;
            height: 250px;
            object-fit: cover;
        }

        .auction-content {
            padding: 25px;
        }

        .auction-title {
            font-size: 1.4rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .auction-description {
            color: #7f8c8d;
            margin-bottom: 20px;
            line-height: 1.5;
        }

        .auction-stats {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            margin-bottom: 20px;
        }

        .stat-item {
            text-align: center;
        }

        .stat-label {
            font-size: 0.8rem;
            color: #7f8c8d;
            text-transform: uppercase;
            margin-bottom: 5px;
        }

        .stat-value {
            font-size: 1.3rem;
            font-weight: 700;
            color: #2c3e50;
        }

        .stat-value.currency {
            color: #27ae60;
        }

        .auction-timer {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
            color: white;
            padding: 15px;
            text-align: center;
            margin-bottom: 20px;
        }

        .timer-label {
            font-size: 0.9rem;
            opacity: 0.9;
            margin-bottom: 5px;
        }

        .timer-display {
            font-size: 1.8rem;
            font-weight: 700;
            font-family: 'Courier New', monospace;
        }

        .auction-actions {
            display: flex;
            gap: 10px;
        }

        .btn-bid {
            flex: 1;
            background: linear-gradient(135deg, #27ae60, #229954);
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .btn-bid:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(39, 174, 96, 0.3);
        }

        .btn-view {
            flex: 1;
            background: #3498db;
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .btn-view:hover {
            background: #2980b9;
            transform: translateY(-2px);
        }

        /* Upcoming Auctions */
        .upcoming-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
        }

        .upcoming-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            padding: 25px;
            text-align: center;
            transition: all 0.3s ease;
        }

        .upcoming-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.12);
        }

        .upcoming-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            margin: 0 auto 20px;
        }

        .upcoming-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .upcoming-date {
            color: #7f8c8d;
            margin-bottom: 15px;
        }

        .upcoming-countdown {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .countdown-title {
            font-size: 0.9rem;
            color: #7f8c8d;
            margin-bottom: 8px;
        }

        .countdown-value {
            font-size: 1.4rem;
            font-weight: 700;
            color: #e74c3c;
            font-family: 'Courier New', monospace;
        }

        /* Completed Auctions */
        .completed-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 25px;
        }

        .completed-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .completed-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.12);
        }

        .completed-image {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

        .completed-content {
            padding: 20px;
        }

        .completed-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
        }

        .completed-winner {
            color: #27ae60;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .completed-price {
            font-size: 1.2rem;
            font-weight: 700;
            color: #e74c3c;
        }

        /* No Auctions State */
        .no-auctions {
            text-align: center;
            padding: 80px 20px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin: 50px auto;
            max-width: 600px;
        }

        .no-auctions-icon {
            width: 120px;
            height: 120px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 3rem;
            margin: 0 auto 30px;
        }

        .no-auctions-title {
            font-size: 2rem;
            color: #2c3e50;
            margin-bottom: 15px;
        }

        .no-auctions-text {
            font-size: 1.1rem;
            color: #7f8c8d;
            line-height: 1.6;
            margin-bottom: 30px;
        }

        .season-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-top: 15px;
        }

        .season-tag {
            background: rgba(255,255,255,0.2);
            color: white;
            padding: 4px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        @media (max-width: 768px) {
            .auction-hero {
                padding: 50px 0;
            }

            .auction-season-title {
                font-size: 2.5rem;
            }

            .auction-season-details {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .auctions-grid {
                grid-template-columns: 1fr;
            }

            .upcoming-grid,
            .completed-grid {
                grid-template-columns: 1fr;
            }

            .auction-stats {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <%- include('./partials/header', { page: 'auctions', user: user }) %>

    <main>
        <!-- Auction Season Hero -->
        <section class="auction-hero">
            <div class="auction-hero-content">
                <% if (activeCountdowns && activeCountdowns.length > 0) { %>
                    <% const season = activeCountdowns[0]; %>
                    <img src="<%= season.image_url || '/images/auction-season.jpg' %>"
                         alt="<%= season.title %>" class="auction-season-image">
                    <h1 class="auction-season-title"><%= season.title %></h1>
                    <p class="auction-season-description"><%= season.description %></p>

                    <div class="auction-season-details">
                        <div class="season-detail-item">
                            <div class="season-detail-label">Date</div>
                            <div class="season-detail-value"><%= new Date(season.start_date).toLocaleDateString() %></div>
                        </div>
                        <div class="season-detail-item">
                            <div class="season-detail-label">Time</div>
                            <div class="season-detail-value"><%= new Date(season.start_date).toLocaleTimeString() %></div>
                        </div>
                        <div class="season-detail-item">
                            <div class="season-detail-label">Location</div>
                            <div class="season-detail-value">Online Platform</div>
                        </div>
                        <div class="season-detail-item">
                            <div class="season-detail-label">Status</div>
                            <div class="season-detail-value">
                                <span class="season-status status-active">Active</span>
                            </div>
                        </div>
                    </div>

                    <div class="season-tags">
                        <span class="season-tag">Electronics</span>
                        <span class="season-tag">Fashion</span>
                        <span class="season-tag">Home & Garden</span>
                        <span class="season-tag">Exclusive</span>
                    </div>
                <% } else { %>
                    <!-- Default auction season when no active events -->
                    <div class="no-auctions-icon">
                        <i class="fas fa-gavel"></i>
                    </div>
                    <h1 class="auction-season-title">Auction Season</h1>
                    <p class="auction-season-description">
                        Exciting auction events coming soon! Stay tuned for exclusive deals on premium products.
                    </p>

                    <div class="auction-season-details">
                        <div class="season-detail-item">
                            <div class="season-detail-label">Next Event</div>
                            <div class="season-detail-value">Coming Soon</div>
                        </div>
                        <div class="season-detail-item">
                            <div class="season-detail-label">Categories</div>
                            <div class="season-detail-value">Electronics, Fashion, Home</div>
                        </div>
                        <div class="season-detail-item">
                            <div class="season-detail-label">Status</div>
                            <div class="season-detail-value">
                                <span class="season-status status-upcoming">Upcoming</span>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </section>

        <!-- Active Auctions Section -->
        <% if (activeAuctions && activeAuctions.length > 0) { %>
        <section class="auction-section">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">Live Auctions</h2>
                    <p class="section-subtitle">Bid now on these active auctions before time runs out!</p>
                </div>

                <div class="auctions-grid">
                    <% activeAuctions.forEach(auction => { %>
                    <div class="auction-card">
                        <img src="<%= auction.product_image || '/images/product-placeholder.jpg' %>"
                             alt="<%= auction.product_name %>" class="auction-image">
                        <div class="auction-content">
                            <h3 class="auction-title"><%= auction.title %></h3>
                            <p class="auction-description">
                                <%= auction.description ? auction.description.substring(0, 100) + '...' : 'Exciting auction item!' %>
                            </p>

                            <div class="auction-stats">
                                <div class="stat-item">
                                    <div class="stat-label">Current Bid</div>
                                    <div class="stat-value currency">$<%= auction.highest_bid || auction.starting_bid %></div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-label">Bidders</div>
                                    <div class="stat-value"><%= auction.total_bidders %></div>
                                </div>
                            </div>

                            <div class="auction-timer">
                                <div class="timer-label">Time Remaining</div>
                                <div class="timer-display" id="timer-<%= auction.id %>">Loading...</div>
                            </div>

                            <div class="auction-actions">
                                <a href="/auctions/<%= auction.id %>" class="btn-view">
                                    <i class="fas fa-eye"></i>
                                    View Details
                                </a>
                                <% if (user) { %>
                                <button class="btn-bid" data-action="bid" data-auction-id="<%= auction.id %>">
                                    <i class="fas fa-gavel"></i>
                                    Place Bid
                                </button>
                                <% } else { %>
                                <a href="/login" class="btn-bid">
                                    <i class="fas fa-sign-in-alt"></i>
                                    Login to Bid
                                </a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>
        <% } %>

        <!-- Upcoming Auctions Section -->
        <% if (upcomingAuctions && upcomingAuctions.length > 0) { %>
        <section class="auction-section" style="background: #f8f9fa;">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">Coming Soon</h2>
                    <p class="section-subtitle">Get ready for these exciting upcoming auctions!</p>
                </div>

                <div class="upcoming-grid">
                    <% upcomingAuctions.forEach(auction => { %>
                    <div class="upcoming-card">
                        <div class="upcoming-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <h3 class="upcoming-title"><%= auction.title %></h3>
                        <div class="upcoming-date">
                            Starts: <%= new Date(auction.start_date).toLocaleDateString() %> at <%= new Date(auction.start_date).toLocaleTimeString() %>
                        </div>
                        <div class="upcoming-countdown">
                            <div class="countdown-title">Countdown to Start</div>
                            <div class="countdown-value" id="countdown-start-<%= auction.id %>">Loading...</div>
                        </div>
                        <a href="/auctions/<%= auction.id %>" class="btn-view" style="margin-top: 15px;">
                            <i class="fas fa-info-circle"></i>
                            Learn More
                        </a>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>
        <% } %>

        <!-- Completed Auctions Section -->
        <% if (completedAuctions && completedAuctions.length > 0) { %>
        <section class="auction-section">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">Recent Winners</h2>
                    <p class="section-subtitle">Check out the latest auction results and winning bids!</p>
                </div>

                <div class="completed-grid">
                    <% completedAuctions.forEach(auction => { %>
                    <div class="completed-card">
                        <img src="<%= auction.product_image || '/images/product-placeholder.jpg' %>"
                             alt="<%= auction.product_name %>" class="completed-image">
                        <div class="completed-content">
                            <h3 class="completed-title"><%= auction.title %></h3>
                            <div class="completed-winner">
                                <i class="fas fa-trophy"></i>
                                Winner: <%= auction.winner_name || 'Anonymous' %>
                            </div>
                            <div class="completed-price">
                                Winning Bid: $<%= auction.winning_bid %>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </section>
        <% } %>

        <!-- No Auctions State -->
        <% if ((!activeAuctions || activeAuctions.length === 0) && (!upcomingAuctions || upcomingAuctions.length === 0) && (!completedAuctions || completedAuctions.length === 0)) { %>
        <section class="auction-section">
            <div class="container">
                <div class="no-auctions">
                    <div class="no-auctions-icon">
                        <i class="fas fa-gavel"></i>
                    </div>
                    <h2 class="no-auctions-title">No Active Auctions</h2>
                    <p class="no-auctions-text">
                        There are currently no active auctions. Check back soon for exciting new auction events featuring premium products at competitive prices!
                    </p>
                    <div style="display: flex; gap: 15px; justify-content: center; flex-wrap: wrap;">
                        <a href="/" class="btn-bid" style="background: #3498db;">
                            <i class="fas fa-home"></i>
                            Back to Home
                        </a>
                        <a href="/contact" class="btn-view">
                            <i class="fas fa-envelope"></i>
                            Contact Us
                        </a>
                    </div>
                </div>
            </div>
        </section>
        <% } %>
    </main>

    <%- include('./partials/footer') %>

    <script type="application/json" id="auction-data">
        {
            "activeAuctions": <%- JSON.stringify(activeAuctions || []) %>,
            "upcomingAuctions": <%- JSON.stringify(upcomingAuctions || []) %>
        }
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            initializeTimers();
            setupActionHandlers();
        });

        function initializeTimers() {
            const auctionData = JSON.parse(document.getElementById('auction-data').textContent);

            // Initialize countdown timers for active auctions
            if (auctionData.activeAuctions && auctionData.activeAuctions.length > 0) {
                auctionData.activeAuctions.forEach(auction => {
                    initializeAuctionTimer(auction.id, auction.end_date);
                });
            }

            // Initialize countdown timers for upcoming auctions
            if (auctionData.upcomingAuctions && auctionData.upcomingAuctions.length > 0) {
                auctionData.upcomingAuctions.forEach(auction => {
                    initializeUpcomingTimer(auction.id, auction.start_date);
                });
            }
        }

        function setupActionHandlers() {
            document.addEventListener('click', function(e) {
                const button = e.target.closest('.btn-bid');
                if (!button) return;

                const action = button.dataset.action;
                const auctionId = button.dataset.auctionId;

                if (action === 'bid') {
                    placeBid(auctionId);
                }
            });
        }

        function initializeAuctionTimer(auctionId, endDateStr) {
            const endDate = new Date(endDateStr);
            const timerElement = document.getElementById(`timer-${auctionId}`);

            function updateTimer() {
                const now = new Date();
                const timeLeft = endDate - now;

                if (timeLeft <= 0) {
                    timerElement.textContent = 'AUCTION ENDED';
                    timerElement.style.color = '#e74c3c';
                    return;
                }

                const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
                const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

                if (days > 0) {
                    timerElement.textContent = `${days}d ${hours}h ${minutes}m`;
                } else if (hours > 0) {
                    timerElement.textContent = `${hours}h ${minutes}m ${seconds}s`;
                } else {
                    timerElement.textContent = `${minutes}m ${seconds}s`;
                }
            }

            updateTimer();
            setInterval(updateTimer, 1000);
        }

        function initializeUpcomingTimer(auctionId, startDateStr) {
            const startDate = new Date(startDateStr);
            const timerElement = document.getElementById(`countdown-start-${auctionId}`);

            function updateTimer() {
                const now = new Date();
                const timeLeft = startDate - now;

                if (timeLeft <= 0) {
                    timerElement.textContent = 'STARTING SOON';
                    timerElement.style.color = '#27ae60';
                    return;
                }

                const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
                const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

                if (days > 0) {
                    timerElement.textContent = `${days}d ${hours}h ${minutes}m`;
                } else if (hours > 0) {
                    timerElement.textContent = `${hours}h ${minutes}m ${seconds}s`;
                } else {
                    timerElement.textContent = `${minutes}m ${seconds}s`;
                }
            }

            updateTimer();
            setInterval(updateTimer, 1000);
        }

