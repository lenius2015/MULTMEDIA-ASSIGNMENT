    <script>
        let quantity = 1;
        let isInWishlist = false;

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            // Check if product is in wishlist
            checkWishlistStatus(<%= product ? product.id : 0 %>);
        });

        function changeQuantity(delta) {
            const input = document.getElementById('quantityInput');
            const max = parseInt(input.max) || 99;
            quantity = Math.max(1, Math.min(max, quantity + delta));
            input.value = quantity;
        }

        function showTab(tabName) {
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            document.querySelector(`.tab-btn[onclick="showTab('${tabName}')"]`).classList.add('active');
            document.getElementById(`tab-${tabName}`).classList.add('active');
        }

        async function addToCart(productId) {
            if (productId === 0) return;

            const btn = document.getElementById('addToCartBtn');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Adding...';
            btn.disabled = true;

            try {
                const response = await fetch('/api/cart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        productId: productId,
                        quantity: quantity
                    })
                });

                const result = await response.json();

                if (result.success) {
                    showNotification('✓ Added to cart!', 'success');
                    updateCartBadge();
                } else {
                    showNotification(result.message || 'Failed to add to cart', 'error');
                }
            } catch (error) {
                console.error('Add to cart error:', error);
                showNotification('Error adding to cart', 'error');
            }

            btn.innerHTML = originalText;
            btn.disabled = false;
        }

        function buyNow(productId) {
            if (productId === 0) return;
            
            // Add to cart and redirect to checkout
            addToCart(productId).then(() => {
                setTimeout(() => {
                    window.location.href = '/checkout';
                }, 500);
            });
        }

        async function toggleWishlist(productId) {
            if (productId === 0) {
                showNotification('Please login to save items to wishlist', 'warning');
                setTimeout(() => window.location.href = '/login', 1500);
                return;
            }

            const btn = document.getElementById('wishlistBtn');
            const icon = btn.querySelector('i');

            try {
                const response = await fetch('/api/wishlist', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ productId })
                });

                const result = await response.json();

                if (result.success) {
                    if (icon.classList.contains('far')) {
                        icon.classList.remove('far');
                        icon.classList.add('fas');
                        icon.style.color = '#ff6b35';
                        btn.classList.add('active');
                        showNotification('Added to wishlist!', 'success');
                    } else {
                        icon.classList.remove('fas');
                        icon.classList.add('far');
                        icon.style.color = '';
                        btn.classList.remove('active');
                        showNotification('Removed from wishlist', 'info');
                    }
                    syncWishlistCount();
                } else {
                    showNotification(result.message || 'Failed to update wishlist', 'error');
                }
            } catch (error) {
                console.error('Toggle wishlist error:', error);
                showNotification('Error updating wishlist', 'error');
            }
        }

        async function checkWishlistStatus(productId) {
            if (productId === 0) return;

            try {
                const response = await fetch('/api/wishlist');
                const result = await response.json();

                if (result.success) {
                    const items = result.wishlist || [];
                    isInWishlist = items.some(item => item.product_id === productId);
                    
                    if (isInWishlist) {
                        const btn = document.getElementById('wishlistBtn');
                        const icon = btn.querySelector('i');
                        icon.classList.remove('far');
                        icon.classList.add('fas');
                        icon.style.color = '#ff6b35';
                        btn.classList.add('active');
                    }
                }
            } catch (error) {
                console.error('Error checking wishlist status:', error);
            }
        }

        function showNotification(message, type = 'info') {
            const existingNotification = document.querySelector('.custom-notification');
            if (existingNotification) {
                existingNotification.remove();
            }

            const notification = document.createElement('div');
            notification.className = `custom-notification ${type}`;
            notification.innerHTML = `<i class="fas fa-info-circle"></i><span>${message}</span>`;
            document.body.appendChild(notification);

            setTimeout(() => notification.classList.add('show'), 100);
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }

        // ========== REVIEW SYSTEM WITH PHOTOS/VIDEOS ==========
        let selectedRating = 0;
        let uploadedMedia = [];

        function setStarRating(rating) {
            selectedRating = rating;
            document.querySelectorAll('.star-rating label').forEach((star, index) => {
                if (index < rating) {
                    star.classList.add('active');
                } else {
                    star.classList.remove('active');
                }
            });
        }

        function previewMedia(event) {
            const files = event.target.files;
            const preview = document.getElementById('uploadedPreview');
            
            Array.from(files).forEach(file => {
                if (uploadedMedia.length >= 5) {
                    showNotification('Maximum 5 files allowed', 'warning');
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(e) {
                    const mediaData = {
                        type: file.type.startsWith('video') ? 'video' : 'image',
                        data: e.target.result,
                        file: file
                    };
                    uploadedMedia.push(mediaData);

                    const div = document.createElement('div');
                    div.className = 'preview-item';
                    if (mediaData.type === 'video') {
                        div.innerHTML = `
                            <video src="${mediaData.data}"></video>
                            <button class="remove-btn" onclick="removeMedia(${uploadedMedia.length - 1})">
                                <i class="fas fa-times"></i>
                            </button>
                        `;
                    } else {
                        div.innerHTML = `
                            <img src="${mediaData.data}" alt="Upload preview">
                            <button class="remove-btn" onclick="removeMedia(${uploadedMedia.length - 1})">
                                <i class="fas fa-times"></i>
                            </button>
                        `;
                    }
                    preview.appendChild(div);
                };
                reader.readAsDataURL(file);
            });
        }

        function removeMedia(index) {
            uploadedMedia.splice(index, 1);
            renderUploadedMedia();
        }

        function renderUploadedMedia() {
            const preview = document.getElementById('uploadedPreview');
            preview.innerHTML = '';
            uploadedMedia.forEach((media, idx) => {
                const div = document.createElement('div');
                div.className = 'preview-item';
                if (media.type === 'video') {
                    div.innerHTML = `
                        <video src="${media.data}"></video>
                        <button class="remove-btn" onclick="removeMedia(${idx})">
                            <i class="fas fa-times"></i>
                        </button>
                    `;
                } else {
                    div.innerHTML = `
                        <img src="${media.data}" alt="Upload preview">
                        <button class="remove-btn" onclick="removeMedia(${idx})">
                            <i class="fas fa-times"></i>
                        </button>
                    `;
                }
                preview.appendChild(div);
            });
        }

        async function submitReview(event) {
            event.preventDefault();
            
            if (selectedRating === 0) {
                showNotification('Please select a rating', 'warning');
                return;
            }

            const comment = event.target.comment.value;
            if (!comment.trim()) {
                showNotification('Please write a review comment', 'warning');
                return;
            }

            try {
                const formData = new FormData();
                formData.append('productId', <%= product ? product.id : 0 %>);
                formData.append('rating', selectedRating);
                formData.append('comment', comment);
                uploadedMedia.forEach((media, index) => {
                    formData.append('media', media.file);
                });

                const response = await fetch('/api/reviews', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    showNotification('Review submitted successfully!', 'success');
                    // Reset form
                    event.target.reset();
                    selectedRating = 0;
                    uploadedMedia = [];
                    document.querySelectorAll('.star-rating label').forEach(star => star.classList.remove('active'));
                    document.getElementById('uploadedPreview').innerHTML = '';
                    // Reload reviews
                    loadReviews();
                } else {
                    showNotification(result.message || 'Failed to submit review', 'error');
                }
            } catch (error) {
                console.error('Submit review error:', error);
                showNotification('Error submitting review', 'error');
            }
        }

        async function loadReviews() {
            try {
                const response = await fetch(`/api/reviews/<%= product ? product.id : 0 %>`);
                const result = await response.json();

                const reviewsList = document.getElementById('reviewsList');
                if (result.success && result.reviews && result.reviews.length > 0) {
                    reviewsList.innerHTML = result.reviews.map(review => `
                        <div class="review-item">
                            <div class="review-header">
                                <span class="review-author">
                                    <i class="fas fa-user-circle"></i> ${review.user_name || 'Anonymous'}
                                </span>
                                <span class="review-date">${new Date(review.created_at).toLocaleDateString()}</span>
                            </div>
                            <div class="stars">
                                ${'★'.repeat(review.rating)}${'☆'.repeat(5 - review.rating)}
                            </div>
                            <p>${review.comment}</p>
                            ${review.media && review.media.length > 0 ? `
                                <div class="review-media">
                                    ${review.media.map(m => 
                                        m.type === 'video' 
                                            ? `<video src="${m.url}" controls></video>`
                                            : `<img src="${m.url}" alt="Review image" onclick="viewMedia('${m.url}')">`
                                    ).join('')}
                                </div>
                            ` : ''}
                        </div>
                    `).join('');
                }
            } catch (error) {
                console.error('Load reviews error:', error);
            }
        }

        function viewMedia(url) {
            window.open(url, '_blank');
        }

        // ========== SIZE GUIDE FUNCTIONS ==========
        function showSizeGuide(tab) {
            document.querySelectorAll('.size-guide-tab').forEach(tab => tab.classList.remove('active'));
            event.target.classList.add('active');
            
            document.getElementById('sizeChartTab').style.display = tab === 'chart' ? 'block' : 'none';
            document.getElementById('sizeQuizTab').style.display = tab === 'quiz' ? 'block' : 'none';
        }

        function selectSize(size) {
            document.querySelectorAll('#sizeChart tbody tr').forEach(row => row.classList.remove('selected-size'));
            event.target.closest('tr').classList.add('selected-size');
            showNotification(`Selected size: ${size}`, 'info');
        }

        const quizSelections = {};
        
        function selectQuizOption(element, category, value) {
            quizSelections[category] = value;
            element.parentElement.querySelectorAll('.quiz-option').forEach(opt => opt.classList.remove('selected'));
            element.classList.add('selected');
        }

        function getRecommendedSize() {
            if (!quizSelections.brandSize) {
                showNotification('Please select your usual size', 'warning');
                return;
            }
            if (!quizSelections.fitPreference) {
                showNotification('Please select your fit preference', 'warning');
                return;
            }
            if (!quizSelections.bodyType) {
                showNotification('Please select your body type', 'warning');
                return;
            }

            // Simple recommendation algorithm
            let recommendedSize = quizSelections.brandSize;
            
            // Adjust based on fit preference
            if (quizSelections.fitPreference === 'slim' && (recommendedSize === 'XL' || recommendedSize === 'XXL')) {
                recommendedSize = recommendedSize === 'XL' ? 'L' : 'XL';
            } else if (quizSelections.fitPreference === 'oversized' && (recommendedSize === 'XS' || recommendedSize === 'S')) {
                recommendedSize = recommendedSize === 'XS' ? 'S' : 'M';
            }

            // Adjust based on body type
            if (quizSelections.bodyType === 'curvy' && (recommendedSize === 'XS' || recommendedSize === 'S')) {
                recommendedSize = recommendedSize === 'XS' ? 'S' : 'M';
            } else if (quizSelections.bodyType === 'slim' && (recommendedSize === 'XL' || recommendedSize === 'XXL')) {
                recommendedSize = recommendedSize === 'XXL' ? 'XL' : 'L';
            }

            document.getElementById('recommendedSizeDisplay').textContent = recommendedSize;
            document.getElementById('sizeRecommendation').style.display = 'block';
            showNotification(`Your recommended size: ${recommendedSize}`, 'success');
        }

        // ========== FREQUENTLY BOUGHT TOGETHER ==========
        const bundleProducts = [];
        
        async function loadBundleProducts() {
            try {
                const response = await fetch(`/products?category=<%= product ? product.category : '' %>&limit=3`);
                const result = await response.json();
                
                if (result.success && result.products) {
                    // Filter out current product and take 2
                    const related = result.products
                        .filter(p => p.id !== <%= product ? product.id : 0 %>)
                        .slice(0, 2);
                    
                    const bundleContainer = document.getElementById('fbtBundleProducts');
                    
                    if (related.length > 0) {
                        bundleContainer.innerHTML = related.map(product => `
                            <div class="fbt-bundle-item">
                                <img src="${product.image_url || '/images/category-placeholder.jpg'}" 
                                     alt="${product.name}" 
                                     onerror="this.src='/images/category-placeholder.jpg'">
                                <div>
                                    <strong>${product.name}</strong>
                                    <div style="color: var(--primary-orange); font-weight: 600;">
                                        TSH ${(product.discounted_price || product.price).toLocaleString()}
                                    </div>
                                </div>
                            </div>
                        `).join('');
                        
                        // Store bundle products for adding to cart
                        bundleProducts.length = 0;
                        related.forEach(p => bundleProducts.push(p));
                        
                        // Update pricing
                        updateBundlePricing(related);
                    } else {
                        bundleContainer.innerHTML = '<div style="color: var(--dark-gray);">No related products found</div>';
                    }
                }
            } catch (error) {
                console.error('Load bundle products error:', error);
            }
        }

        function updateBundlePricing(relatedProducts) {
            const mainPrice = <%= product ? (product.discounted_price || product.price) : 0 %>;
            const bundleTotal = relatedProducts.reduce((sum, p) => sum + (p.discounted_price || p.price), 0) + mainPrice;
            const savings = Math.round(bundleTotal * 0.15);
            const finalPrice = bundleTotal - savings;
            
            document.getElementById('fbtOriginalPrice').textContent = `TSH ${bundleTotal.toLocaleString()}`;
            document.getElementById('fbtBundlePrice').textContent = `TSH ${finalPrice.toLocaleString()}`;
            document.querySelector('.fbt-savings').innerHTML = `<i class="fas fa-tag"></i> Save TSH ${savings.toLocaleString()}`;
        }

        async function addBundleToCart() {
            const mainProductId = <%= product ? product.id : 0 %>;
            
            // Add main product
            await addToCart(mainProductId);
            
            // Add bundle products
            for (const product of bundleProducts) {
                await addToCart(product.id);
            }
            
            showNotification('Bundle added to cart!', 'success');
        }

        // Load bundle products on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadBundleProducts();
        });
    </script>
</body>
