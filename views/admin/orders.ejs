<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Management - OMUNJU SHOPPERS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/admin.css">
</head>
<body>
    <div class="admin-layout">
        <%- include('./partials/sidebar', { currentPage: 'orders' }) %>

        <div class="admin-main">
            <%- include('./partials/header', { pageTitle: 'Order Management' }) %>

            <main class="admin-content">
                <div class="admin-card">
                    <div class="card-header">
                        <h2 class="card-title">Orders</h2>
                        <div style="display: flex; gap: 12px;">
                            <button class="btn btn-primary" onclick="exportOrders()">
                                <i class="fas fa-download"></i>
                                Export
                            </button>
                        </div>
                    </div>

                    <!-- Filters -->
                    <div style="margin-bottom: 24px; display: flex; gap: 12px; flex-wrap: wrap;">
                        <select id="status-filter" class="form-group" style="margin: 0; flex: 1; min-width: 150px;" onchange="applyFilters()">
                            <option value="">All Status</option>
                            <option value="incomplete_order">Incomplete Order</option>
                            <option value="pending">Pending</option>
                            <option value="paid">Paid</option>
                            <option value="confirmed">Confirmed</option>
                            <option value="processing">Processing</option>
                            <option value="shipped">Shipped</option>
                            <option value="delivery_requested">Delivery Requested</option>
                            <option value="delivered">Delivered</option>
                            <option value="cancelled">Cancelled</option>
                        </select>
                        <input type="date" id="date-filter" class="form-group" style="margin: 0; flex: 1; min-width: 150px;" onchange="applyFilters()">
                        <input type="text" id="search-filter" placeholder="Search orders..." class="form-group" style="margin: 0; flex: 2; min-width: 200px;" onkeyup="applyFilters()">
                    </div>

                    <!-- Orders Table -->
                    <div class="admin-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Date</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="orders-table-body">
                                <% orders.forEach(order => { %>
                                <tr>
                                    <td><strong>#<%= order.id %></strong></td>
                                    <td>
                                        <div>
                                            <div><%= order.customer_name || 'Unknown' %></div>
                                            <div style="font-size: 0.75rem; color: #64748b;"><%= order.customer_email || '' %></div>
                                        </div>
                                    </td>
                                    <td><%= new Date(order.created_at).toLocaleDateString() %></td>
                                    <td>$<%= order.total_amount %></td>
                                    <td>
                                        <span class="status <%
                                            const statusClasses = {
                                                'incomplete_order': 'pending',
                                                'pending': 'pending',
                                                'paid': 'delivered',
                                                'confirmed': 'delivered',
                                                'processing': 'warning',
                                                'shipped': 'processing',
                                                'delivery_requested': 'warning',
                                                'delivered': 'delivered',
                                                'cancelled': 'cancelled'
                                            };
                                        %><%= statusClasses[order.status] || 'pending' %>">
                                            <%= order.status.replace('_', ' ').replace(/\b\w/g, l => l.toUpperCase()) %>
                                        </span>
                                    </td>
                                    <td>
                                        <div style="display: flex; gap: 8px;">
                                            <button class="btn btn-secondary btn-sm" onclick="viewOrder('<%= order.id %>')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-primary btn-sm" onclick="updateOrderStatus('<%= order.id %>')">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                                <% if (orders.length === 0) { %>
                                <tr>
                                    <td colspan="6" style="text-align: center; color: #64748b;">No orders found</td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div style="margin-top: 24px; display: flex; justify-content: space-between; align-items: center;">
                        <div>Showing <%= orders.length %> orders</div>
                        <div style="display: flex; gap: 8px;">
                            <% if (page > 1) { %>
                            <button class="btn btn-secondary" onclick="window.location.href='?page=<%= page - 1 %>'">Previous</button>
                            <% } %>
                            <button class="btn btn-primary"><%= page %></button>
                            <% if (page < totalPages) { %>
                            <button class="btn btn-secondary" onclick="window.location.href='?page=<%= page + 1 %>'">Next</button>
                            <% } %>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Order Details Modal -->
    <div class="modal" id="order-details-modal">
        <div class="modal-content" style="max-width: 800px;">
            <div class="modal-header">
                <h3 class="modal-title">Order Details - <span id="order-id">#ORD-2024-001</span></h3>
                <button class="modal-close" onclick="hideModal('order-details-modal')">&times;</button>
            </div>
            <div id="order-details-content">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 24px; margin-bottom: 24px;">
                    <div>
                        <h4>Customer Information</h4>
                        <p><strong>Name:</strong> <span id="customer-name">-</span></p>
                        <p><strong>Email:</strong> <span id="customer-email">-</span></p>
                        <p><strong>Phone:</strong> <span id="customer-phone">-</span></p>
                        <p><strong>Address:</strong> <span id="customer-address">-</span></p>
                    </div>
                    <div>
                        <h4>Order Information</h4>
                        <p><strong>Order Date:</strong> <span id="order-date">-</span></p>
                        <p><strong>Status:</strong> <span id="order-status-badge">-</span></p>
                        <p><strong>Payment Method:</strong> <span id="order-payment">-</span></p>
                        <p><strong>Total:</strong> <span id="order-total">-</span></p>
                    </div>
                </div>

                <h4>Order Items</h4>
                <div class="admin-table" style="margin-bottom: 24px;">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody id="order-items-body">
                            <tr><td colspan="4" style="text-align: center;">Loading...</td></tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" style="text-align: right;"><strong>Subtotal:</strong></td>
                                <td><span id="order-subtotal">-</span></td>
                            </tr>
                            <tr>
                                <td colspan="3" style="text-align: right;"><strong>Shipping:</strong></td>
                                <td>$0.00</td>
                            </tr>
                            <tr>
                                <td colspan="3" style="text-align: right;"><strong>Total:</strong></td>
                                <td><strong id="order-final-total">-</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <div style="display: flex; gap: 12px; justify-content: flex-end;">
                    <button class="btn btn-secondary" onclick="printOrder()">Print Invoice</button>
                    <button class="btn btn-primary" onclick="hideModal('order-details-modal'); updateOrderStatus(currentOrderId);">Update Status</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Update Status Modal -->
    <div class="modal" id="update-status-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Update Order Status</h3>
                <button class="modal-close" onclick="hideModal('update-status-modal')">&times;</button>
            </div>
            <form id="status-update-form">
                <div class="form-group">
                    <label for="order-status">New Status</label>
                    <select id="order-status" name="status" required>
                        <option value="incomplete_order">Incomplete Order</option>
                        <option value="pending">Pending</option>
                        <option value="paid">Paid</option>
                        <option value="confirmed">Confirmed</option>
                        <option value="processing">Processing</option>
                        <option value="shipped">Shipped</option>
                        <option value="delivery_requested">Delivery Requested</option>
                        <option value="delivered">Delivered</option>
                        <option value="cancelled">Cancelled</option>
                    </select>
                </div>

                <!-- Delivery Information (shown when shipping/delivering) -->
                <div id="delivery-fields" style="display: none;">
                    <div class="form-group">
                        <label for="delivery-agent">Delivery Agent</label>
                        <input type="text" id="delivery-agent" name="delivery_agent" placeholder="Agent name">
                    </div>
                    <div class="form-group">
                        <label for="tracking-number">Tracking Number</label>
                        <input type="text" id="tracking-number" name="tracking_number" placeholder="Tracking number">
                    </div>
                    <div class="form-group">
                        <label for="estimated-delivery">Estimated Delivery Date</label>
                        <input type="date" id="estimated-delivery" name="estimated_delivery">
                    </div>
                </div>

                <div style="display: flex; gap: 12px; justify-content: flex-end;">
                    <button type="button" class="btn btn-secondary" onclick="hideModal('update-status-modal')">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Status</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Toast Container -->
    <div class="toast-container" id="toast-container"></div>

    <script src="/admin.js"></script>
    <script>
        let currentOrderId = null;

        function viewOrder(orderId) {
            currentOrderId = orderId;
            document.getElementById('order-id').textContent = '#' + orderId;
            
            // Fetch order details from API
            fetch('/admin/api/orders/' + orderId)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const order = data.order;
                        const items = data.items;
                        
                        // Update customer info
                        document.getElementById('customer-name').textContent = order.customer_name || 'Unknown';
                        document.getElementById('customer-email').textContent = order.customer_email || 'N/A';
                        document.getElementById('customer-phone').textContent = order.customer_phone || 'N/A';
                        document.getElementById('customer-address').textContent = order.shipping_address || order.customer_address || 'N/A';
                        
                        // Update order info
                        document.getElementById('order-date').textContent = new Date(order.created_at).toLocaleDateString();
                        document.getElementById('order-status-badge').innerHTML = getStatusBadge(order.status);
                        document.getElementById('order-payment').textContent = order.payment_method || 'Credit Card';
                        document.getElementById('order-total').textContent = '$' + parseFloat(order.total_amount).toFixed(2);
                        
                        // Update items table
                        if (items.length > 0) {
                            const itemsHtml = items.map(function(item) {
                                return '<tr>' +
                                    '<td>' +
                                        '<div style="display: flex; align-items: center; gap: 12px;">' +
                                            '<img src="' + (item.product_image || '/images/product-placeholder.jpg') + '" ' +
                                                 'alt="' + (item.product_name || 'Product') + '" ' +
                                                 'style="width: 50px; height: 50px; border-radius: 4px; object-fit: cover;" ' +
                                                 'onerror="this.src=\'https://via.placeholder.com/50x50?text=Product\'">' +
                                            '<span>' + (item.product_name || 'Product') + '</span>' +
                                        '</div>' +
                                    '</td>' +
                                    '<td>' + item.quantity + '</td>' +
                                    '<td>$' + parseFloat(item.price).toFixed(2) + '</td>' +
                                    '<td>$' + (item.quantity * item.price).toFixed(2) + '</td>' +
                                '</tr>';
                            }).join('');
                            document.getElementById('order-items-body').innerHTML = itemsHtml;
                        } else {
                            document.getElementById('order-items-body').innerHTML = '<tr><td colspan="4" style="text-align: center;">No items found</td></tr>';
                        }
                        
                        // Update order total in footer
                        document.getElementById('order-subtotal').textContent = '$' + parseFloat(order.total_amount).toFixed(2);
                        document.getElementById('order-final-total').textContent = '$' + parseFloat(order.total_amount).toFixed(2);
                        
                        showModal('order-details-modal');
                    } else {
                        showToast('Failed to load order details', 'error');
                    }
                })
                .catch(function(error) {
                    console.error('Error:', error);
                    showToast('Failed to load order details', 'error');
                });
        }

        function getStatusBadge(status) {
            const statusClasses = {
                'incomplete_order': 'pending',
                'pending': 'pending',
                'paid': 'delivered',
                'confirmed': 'delivered',
                'processing': 'warning',
                'shipped': 'processing',
                'delivery_requested': 'warning',
                'delivered': 'delivered',
                'cancelled': 'cancelled'
            };
            const className = statusClasses[status] || 'pending';
            const displayStatus = status.replace('_', ' ').replace(/\b\w/g, function(l) { return l.toUpperCase(); });
            return '<span class="status ' + className + '">' + displayStatus + '</span>';
        }

        function updateOrderStatus(orderId) {
            document.getElementById('status-update-form').setAttribute('data-order-id', orderId);
            showModal('update-status-modal');
        }

        function exportOrders() {
            showToast('Exporting orders...', 'info');
            setTimeout(function() {
                showToast('Orders exported successfully!', 'success');
            }, 2000);
        }

        function printOrder() {
            window.print();
        }

        function applyFilters() {
            const status = document.getElementById('status-filter').value;
            const date = document.getElementById('date-filter').value;
            const search = document.getElementById('search-filter').value;
            
            let url = '/admin/orders?';
            if (status) url += 'status=' + status + '&';
            if (date) url += 'date=' + date + '&';
            if (search) url += 'search=' + encodeURIComponent(search);
            
            window.location.href = url;
        }

        // Show/hide delivery fields based on status
        document.getElementById('order-status').addEventListener('change', function() {
            const deliveryFields = document.getElementById('delivery-fields');
            const selectedStatus = this.value;
            
            if (['shipped', 'delivered'].indexOf(selectedStatus) !== -1) {
                deliveryFields.style.display = 'block';
            } else {
                deliveryFields.style.display = 'none';
            }
        });

        document.getElementById('status-update-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const orderId = this.getAttribute('data-order-id');
            const formData = new FormData(this);
            const data = {
                status: formData.get('status'),
                delivery_agent: formData.get('delivery_agent'),
                tracking_number: formData.get('tracking_number'),
                estimated_delivery: formData.get('estimated_delivery')
            };
            
            fetch('/admin/orders/' + orderId + '/status', {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showToast('Order status updated successfully!', 'success');
                    hideModal('update-status-modal');
                    this.reset();
                    this.removeAttribute('data-order-id');
                    document.getElementById('delivery-fields').style.display = 'none';
                    setTimeout(function() { location.reload(); }, 1000);
                } else {
                    showToast(data.message || 'Failed to update order status', 'error');
                }
            })
            .catch(function(error) {
                console.error('Error:', error);
                showToast('Failed to update order status', 'error');
            });
        });
    </script>

    <script src="/admin-buttons.js"></script>
</body>
</html>
