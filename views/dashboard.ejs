<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - OMUNJU SHOPPERS</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Dashboard Page Specific Styles */
        :root {
            --primary-orange: #ff6b35;
            --primary-blue: #004e89;
            --accent-amber: #f77f00;
            --soft-orange: #ff8a65;
            --very-light-orange: #fff3e0;
            --white: #ffffff;
            --light-gray: #f8f9fa;
            --medium-gray: #e0e0e0;
            --dark-gray: #666;
            --darker-gray: #1a1a1a;
            --success-green: #28a745;
            --error-red: #dc3545;
            --shadow: 0 2px 4px rgba(0,0,0,0.08);
            --shadow-lg: 0 8px 24px rgba(0,0,0,0.12);
            --border-radius: 8px;
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--light-gray);
            color: var(--darker-gray);
            line-height: 1.6;
        }

        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .dashboard-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .dashboard-title {
            font-size: 2.5rem;
            color: var(--primary-orange);
            margin-bottom: 10px;
        }

        .dashboard-subtitle {
            color: var(--dark-gray);
            font-size: 1.1rem;
        }

        .dashboard-content {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 40px;
        }

        .dashboard-sidebar {
            background: var(--white);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            padding: 30px;
            height: fit-content;
        }

        .sidebar-title {
            color: var(--primary-orange);
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid var(--soft-orange);
            font-size: 1.5rem;
        }

        .sidebar-menu {
            list-style: none;
        }

        .sidebar-item {
            margin-bottom: 10px;
        }

        .sidebar-link {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 16px;
            color: var(--dark-gray);
            text-decoration: none;
            border-radius: var(--border-radius);
            transition: var(--transition);
        }

        .sidebar-link:hover, .sidebar-link.active {
            background: var(--primary-orange);
            color: var(--white);
        }

        .badge {
            background: var(--error-red);
            color: var(--white);
            border-radius: 50%;
            padding: 2px 6px;
            font-size: 0.7rem;
            font-weight: bold;
            margin-left: 5px;
        }

        .sidebar-icon {
            font-size: 1.2rem;
            width: 20px;
        }

        .dashboard-main {
            background: var(--white);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            padding: 30px;
        }

        .content-section {
            display: none;
        }

        .content-section.active {
            display: block;
        }

        .content-header {
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid var(--medium-gray);
        }

        .content-title {
            font-size: 2rem;
            color: var(--primary-blue);
            margin-bottom: 8px;
        }

        .content-subtitle {
            color: var(--dark-gray);
            font-size: 1rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: var(--light-gray);
            padding: 20px;
            border-radius: var(--border-radius);
            text-align: center;
            border: 2px solid var(--medium-gray);
            transition: var(--transition);
        }

        .stat-card:hover {
            border-color: var(--primary-orange);
            transform: translateY(-2px);
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-orange);
            margin-bottom: 8px;
        }

        .stat-label {
            color: var(--dark-gray);
            font-size: 0.9rem;
        }

        .profile-info {
            display: grid;
            grid-template-columns: 120px 1fr;
            gap: 20px;
            align-items: center;
            margin-bottom: 30px;
        }

        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-orange), var(--accent-amber));
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--white);
            font-size: 48px;
        }

        .profile-details h3 {
            color: var(--primary-blue);
            margin-bottom: 8px;
        }

        .profile-details p {
            color: var(--dark-gray);
            margin-bottom: 4px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            color: var(--darker-gray);
            font-weight: 500;
        }

        .form-input, .form-textarea {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid var(--medium-gray);
            border-radius: var(--border-radius);
            font-size: 16px;
            transition: var(--transition);
            background: var(--white);
        }

        .form-input:focus, .form-textarea:focus {
            outline: none;
            border-color: var(--primary-orange);
            box-shadow: 0 0 0 3px rgba(255, 107, 53, 0.1);
        }

        .form-textarea {
            resize: vertical;
            min-height: 100px;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: var(--border-radius);
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-orange), var(--accent-amber));
            color: var(--white);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
        }

        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid var(--medium-gray);
        }

        .cart-section, .orders-section {
            margin-top: 30px;
        }

        .cart-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid var(--medium-gray);
        }

        .cart-item:last-child {
            border-bottom: none;
        }

        .item-info h4 {
            color: var(--darker-gray);
            margin-bottom: 5px;
        }

        .item-meta {
            color: var(--dark-gray);
            font-size: 0.9rem;
        }

        .orders-table {
            width: 100%;
            border-collapse: collapse;
        }

        .orders-table th, .orders-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid var(--medium-gray);
        }

        .orders-table th {
            background: var(--light-gray);
            font-weight: 600;
            color: var(--primary-blue);
        }

        .order-status {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .status-pending { background: #fff3cd; color: #856404; }
        .status-processing { background: #cce5ff; color: #004085; }
        .status-shipped { background: #d1ecf1; color: #0c5460; }
        .status-delivered { background: #d4edda; color: #155724; }
        .status-cancelled { background: #f8d7da; color: #721c24; }

        .alert {
            padding: 15px;
            border-radius: var(--border-radius);
            margin-bottom: 20px;
            display: none;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .loading {
            text-align: center;
            padding: 40px;
        }

        .loading i {
            font-size: 2rem;
            color: var(--primary-orange);
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        @media (max-width: 768px) {
            .dashboard-content {
                grid-template-columns: 1fr;
            }

            .dashboard-title {
                font-size: 2rem;
            }

            .profile-info {
                grid-template-columns: 80px 1fr;
                gap: 15px;
            }

            .profile-avatar {
                width: 80px;
                height: 80px;
                font-size: 32px;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .form-actions {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <%- include('./partials/header', { currentPage: 'dashboard' }) %>

    <div class="dashboard-container">
        <!-- Dashboard Header -->
        <div class="dashboard-header">
            <h1 class="dashboard-title">Welcome back, <%= user.name %>!</h1>
            <p class="dashboard-subtitle">Manage your account and track your orders</p>
        </div>

        <!-- Dashboard Content -->
        <div class="dashboard-content">
            <!-- Sidebar -->
            <div class="dashboard-sidebar">
                <h3 class="sidebar-title">Dashboard</h3>
                <ul class="sidebar-menu">
                    <li class="sidebar-item">
                        <a href="#profile" class="sidebar-link active" data-section="profile">
                            <i class="fas fa-user sidebar-icon"></i>
                            My Profile
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#orders" class="sidebar-link" data-section="orders">
                            <i class="fas fa-shopping-bag sidebar-icon"></i>
                            Order History
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#cart" class="sidebar-link" data-section="cart">
                            <i class="fas fa-shopping-cart sidebar-icon"></i>
                            My Cart
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#wishlist" class="sidebar-link" data-section="wishlist">
                            <i class="fas fa-heart sidebar-icon"></i>
                            Wishlist
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#inbox" class="sidebar-link" data-section="inbox">
                            <i class="fas fa-envelope sidebar-icon"></i>
                            Inbox
                            <span id="inboxBadge" class="badge" style="display: none;"></span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#invoices" class="sidebar-link" data-section="invoices">
                            <i class="fas fa-file-invoice-dollar sidebar-icon"></i>
                            Invoices
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Main Content -->
            <div class="dashboard-main">
                <!-- Profile Section -->
                <div id="profileContent" class="content-section active">
                    <div class="content-header">
                        <h2 class="content-title">My Profile</h2>
                        <p class="content-subtitle">Manage your account information</p>
                    </div>
                    <div class="content-body">
                        <div id="profileAlert" class="alert"></div>

                        <div class="profile-info">
                            <div class="profile-avatar">
                                <% if (user && user.profile_picture) { %>
                                    <img src="<%= user.profile_picture %>" alt="Profile" style="width: 100%; height: 100%; border-radius: 50%; object-fit: cover;">
                                <% } else { %>
                                    <i class="fas fa-user"></i>
                                <% } %>
                            </div>
                            <div class="profile-details">
                                <h3 id="userName"><%= user.name %></h3>
                                <p><%= user.email %></p>
                                <p>Member since <%= new Date(user.created_at).toLocaleDateString() %></p>
                            </div>
                        </div>

                        <!-- Quick Actions -->
                        <div class="quick-actions" style="display: flex; gap: 15px; margin-bottom: 30px; justify-content: center; flex-wrap: wrap;">
                            <button id="skipProfileBtn" class="btn btn-secondary" style="background: var(--light-gray); color: var(--primary-blue); border: 2px solid var(--medium-gray);">
                                <i class="fas fa-forward"></i>
                                Skip Now
                            </button>
                            <button id="startShoppingBtn" class="btn btn-primary">
                                <i class="fas fa-shopping-bag"></i>
                                Start Shopping Now
                            </button>
                        </div>

                        <!-- Auto Redirect Countdown -->
                        <div id="redirectCountdown" class="redirect-countdown" style="text-align: center; margin-bottom: 30px; padding: 20px; background: var(--very-light-orange); border-radius: var(--border-radius); border: 2px solid var(--soft-orange);">
                            <div style="font-size: 1.2rem; color: var(--primary-orange); margin-bottom: 10px;">
                                <i class="fas fa-clock"></i>
                                Redirecting to home page in <span id="countdownTimer" style="font-weight: bold; font-size: 1.5rem;">15</span> seconds
                            </div>
                            <div class="countdown-bar" style="width: 100%; height: 8px; background: var(--medium-gray); border-radius: 4px; overflow: hidden;">
                                <div id="countdownProgress" style="height: 100%; background: linear-gradient(90deg, var(--primary-orange), var(--accent-amber)); width: 100%; transition: width 1s linear;"></div>
                            </div>
                            <p style="margin-top: 10px; color: var(--dark-gray); font-size: 0.9rem;">
                                You can skip this by clicking "Skip Now" or "Start Shopping Now"
                            </p>
                        </div>

                        <form id="profileForm">
                            <div class="form-group">
                                <label for="name" class="form-label">Full Name</label>
                                <input type="text" id="name" name="name" class="form-input" value="<%= user.name %>" required>
                            </div>

                            <div class="form-group">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" id="email" name="email" class="form-input" value="<%= user.email %>" readonly>
                                <small style="color: var(--dark-gray);">Email cannot be changed</small>
                            </div>

                            <div class="form-group">
                                <label for="phone" class="form-label">Phone Number</label>
                                <input type="tel" id="phone" name="phone" class="form-input" value="<%= user.phone || '' %>" placeholder="Enter your phone number">
                            </div>

                            <div class="form-group">
                                <label for="address" class="form-label">Shipping Address</label>
                                <textarea id="address" name="address" class="form-textarea" placeholder="Enter your shipping address"><%= user.address || '' %></textarea>
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary" id="saveProfileBtn">
                                    <i class="fas fa-save"></i>
                                    Save Changes
                                </button>
                            </div>
                        </form>

                        <div class="password-section" style="margin-top: 40px; padding-top: 30px; border-top: 1px solid var(--medium-gray);">
                            <h4 style="color: var(--primary-orange); margin-bottom: 20px; font-size: 1.3rem;">Change Password</h4>

                            <form id="passwordForm">
                                <div class="form-group">
                                    <label for="currentPassword" class="form-label">Current Password</label>
                                    <input type="password" id="currentPassword" name="currentPassword" class="form-input" placeholder="Enter current password">
                                </div>

                                <div class="form-group">
                                    <label for="newPassword" class="form-label">New Password</label>
                                    <input type="password" id="newPassword" name="newPassword" class="form-input" placeholder="Enter new password" minlength="6">
                                </div>

                                <div class="form-group">
                                    <label for="confirmPassword" class="form-label">Confirm New Password</label>
                                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-input" placeholder="Confirm new password">
                                </div>

                                <button type="submit" class="btn btn-primary" id="changePasswordBtn">
                                    <i class="fas fa-key"></i>
                                    Change Password
                                </button>
                            </form>
                        </div>

                        <div class="help-section" style="margin-top: 40px; padding-top: 30px; border-top: 1px solid var(--medium-gray);">
                            <h4 style="color: var(--primary-orange); margin-bottom: 20px; font-size: 1.3rem;">Help & Support</h4>
                            <div class="help-options">
                                <button class="btn btn-primary" id="restartOnboardingBtn" style="margin-bottom: 10px; width: 100%;">
                                    <i class="fas fa-question-circle"></i>
                                    Show Introduction Again
                                </button>
                                <p style="font-size: 0.9rem; color: var(--dark-gray); margin-bottom: 15px;">
                                    Need help getting started? Watch the introduction again to learn how to shop with us.
                                </p>
                                <div class="support-links">
                                    <a href="/contact" class="btn" style="background: var(--light-gray); color: var(--primary-blue); margin-right: 10px;">
                                        <i class="fas fa-envelope"></i>
                                        Contact Support
                                    </a>
                                    <button class="btn" style="background: #25d366; color: white;" onclick="openWhatsApp()">
                                        <i class="fab fa-whatsapp"></i>
                                        WhatsApp Support
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orders Section -->
                <div id="ordersContent" class="content-section">
                    <div class="content-header">
                        <h2 class="content-title">Order History</h2>
                        <p class="content-subtitle">Track your past orders and purchases</p>
                    </div>
                    <div class="content-body">
                        <div id="ordersTable">
                            <div class="loading">
                                <i class="fas fa-spinner"></i>
                                <p>Loading orders...</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cart Section -->
                <div id="cartContent" class="content-section">
                    <div class="content-header">
                        <h2 class="content-title">My Cart</h2>
                        <p class="content-subtitle">View and manage items in your shopping cart</p>
                    </div>
                    <div class="content-body">
                        <div id="cartItems">
                            <div class="loading">
                                <i class="fas fa-spinner"></i>
                                <p>Loading cart...</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Wishlist Section -->
                <div id="wishlistContent" class="content-section">
                    <div class="content-header">
                        <h2 class="content-title">My Wishlist</h2>
                        <p class="content-subtitle">Items you've saved for later</p>
                    </div>
                    <div class="content-body">
                        <p style="color: var(--dark-gray); font-style: italic;">Wishlist feature coming soon...</p>
                    </div>
                </div>

                <!-- Inbox Section -->
                <div id="inboxContent" class="content-section">
                    <div class="content-header">
                        <h2 class="content-title">Inbox</h2>
                        <p class="content-subtitle">Messages from OMUNJU SHOPPERS</p>
                    </div>
                    <div class="content-body">
                        <div id="inboxMessages">
                            <div class="loading">
                                <i class="fas fa-spinner"></i>
                                <p>Loading messages...</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Invoices Section -->
                <div id="invoicesContent" class="content-section">
                    <div class="content-header">
                        <h2 class="content-title">My Invoices</h2>
                        <p class="content-subtitle">Download and view your order invoices</p>
                    </div>
                    <div class="content-body">
                        <div id="invoicesList">
                            <div class="loading">
                                <i class="fas fa-spinner"></i>
                                <p>Loading invoices...</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer') %>

    <script>
        // Global variables
        let currentUser = JSON.parse(document.body.getAttribute('data-user') || '{}');
        let cartData = [];
        let profileData = {};
        let currentSection = 'profile';

        // Initialize dashboard
        document.addEventListener('DOMContentLoaded', function() {
            loadDashboardData();
            setupEventListeners();
            startRedirectCountdown();
        });

        // Load all dashboard data
        async function loadDashboardData() {
            try {
                // Load profile data
                const profileResponse = await fetch('/api/profile');
                profileData = await profileResponse.json();

                // Load cart data
                const cartResponse = await fetch('/api/cart');
                const cartResult = await cartResponse.json();
                cartData = cartResult.cart || [];

                // Load inbox count
                loadInboxCount();

                // Update UI
                updateStats();
                switchSection('profile'); // Start with profile section
            } catch (error) {
                console.error('Error loading dashboard data:', error);
            }
        }

        // Load inbox count for badge
        async function loadInboxCount() {
            try {
                const response = await fetch('/api/inbox/unread-count');
                const result = await response.json();
                if (result.success) {
                    updateInboxBadge(result.unreadCount);
                }
            } catch (error) {
                console.error('Error loading inbox count:', error);
            }
        }

        // Update dashboard stats
        function updateStats() {
            if (profileData.user) {
                // Update stats if available
                document.getElementById('totalProducts').textContent = 'Loading...';
                document.getElementById('totalCategories').textContent = 'Loading...';
                document.getElementById('cartItems').textContent = cartData.length;
            }
        }

        // Setup event listeners
        function setupEventListeners() {
            // Sidebar navigation
            document.querySelectorAll('.sidebar-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const section = this.getAttribute('data-section');
                    switchSection(section);
                });
            });

            // Profile form submission
            document.getElementById('profileForm').addEventListener('submit', updateProfile);

            // Password form submission
            document.getElementById('passwordForm').addEventListener('submit', changePassword);

            // Quick action buttons
            document.getElementById('skipProfileBtn').addEventListener('click', redirectToHome);
            document.getElementById('startShoppingBtn').addEventListener('click', redirectToHome);
        }

        // Switch dashboard sections
        function switchSection(section) {
            // Hide all sections
            document.querySelectorAll('.content-section').forEach(sec => {
                sec.classList.remove('active');
            });

            // Remove active class from sidebar links
            document.querySelectorAll('.sidebar-link').forEach(link => {
                link.classList.remove('active');
            });

            // Show selected section
            document.getElementById(section + 'Content').classList.add('active');
            document.querySelector(`[data-section="${section}"]`).classList.add('active');

            currentSection = section;

            // Load section data
            if (section === 'orders') {
                loadOrders();
            } else if (section === 'cart') {
                loadCart();
            } else if (section === 'inbox') {
                loadInbox();
            } else if (section === 'invoices') {
                loadInvoices();
            }
        }

        // Update profile
        async function updateProfile(e) {
            e.preventDefault();

            const saveBtn = document.getElementById('saveProfileBtn');
            const alertDiv = document.getElementById('profileAlert');

            if (!saveBtn || !alertDiv) {
                console.error('Profile update: Required elements not found');
                return;
            }

            const originalText = saveBtn.innerHTML;

            saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';
            saveBtn.disabled = true;

            try {
                const formData = new FormData(this);
                const data = Object.fromEntries(formData);

                const response = await fetch('/api/profile', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    showAlert('Profile updated successfully!', 'success', 'profileAlert');
                    // Update displayed data
                    const userNameElement = document.getElementById('userName');
                    if (userNameElement) {
                        userNameElement.textContent = data.name;
                    }
                    currentUser.name = data.name;
                } else {
                    showAlert(result.message || 'Failed to update profile', 'error', 'profileAlert');
                }
            } catch (error) {
                console.error('Profile update error:', error);
                showAlert('Failed to update profile', 'error', 'profileAlert');
            } finally {
                if (saveBtn) {
                    saveBtn.innerHTML = originalText;
                    saveBtn.disabled = false;
                }
            }
        }

        // Change password
        async function changePassword(e) {
            e.preventDefault();

            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (newPassword !== confirmPassword) {
                showAlert('Passwords do not match', 'error', 'profileAlert');
                return;
            }

            const changeBtn = document.getElementById('changePasswordBtn');
            const originalText = changeBtn.innerHTML;

            changeBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Changing...';
            changeBtn.disabled = true;

            try {
                const formData = new FormData(this);
                const data = Object.fromEntries(formData);

                const response = await fetch('/api/profile', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    showAlert('Password changed successfully!', 'success', 'profileAlert');
                    this.reset();
                    if (result.passwordChanged) {
                        setTimeout(() => {
                            alert('Password changed successfully! Please log in again.');
                            window.location.href = '/login';
                        }, 2000);
                    }
                } else {
                    showAlert(result.message || 'Failed to change password', 'error', 'profileAlert');
                }
            } catch (error) {
                console.error('Password change error:', error);
                showAlert('Failed to change password', 'error', 'profileAlert');
            } finally {
                changeBtn.innerHTML = originalText;
                changeBtn.disabled = false;
            }
        }

        // Load orders
        async function loadOrders() {
            const ordersTable = document.getElementById('ordersTable');

            if (!profileData.orders || profileData.orders.length === 0) {
                ordersTable.innerHTML = '<p style="color: var(--dark-gray); font-style: italic;">No orders found.</p>';
                return;
            }

            let html = `
                <table class="orders-table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Items</th>
                            <th>Total</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
            `;

            profileData.orders.forEach(order => {
                html += `
                    <tr>
                        <td>#${order.id}</td>
                        <td>${new Date(order.created_at).toLocaleDateString()}</td>
                        <td>${order.item_count} items</td>
                        <td>$${order.total_amount}</td>
                        <td><span class="order-status status-${order.status.toLowerCase()}">${order.status}</span></td>
                    </tr>
                `;
            });

            html += '</tbody></table>';
            ordersTable.innerHTML = html;
        }

        // Load cart
        function loadCart() {
            const cartItems = document.getElementById('cartItems');

            if (!cartData || cartData.length === 0) {
                cartItems.innerHTML = '<p style="color: var(--dark-gray); font-style: italic;">Your cart is empty.</p>';
                return;
            }

            let html = '';
            let total = 0;

            cartData.forEach(item => {
                const itemTotal = item.discounted_price * item.quantity;
                total += itemTotal;

                html += `
                    <div class="cart-item">
                        <div class="item-info">
                            <h4>${item.name}</h4>
                            <div class="item-meta">
                                Quantity: ${item.quantity} | Price: $${item.discounted_price.toFixed(2)} | Total: $${itemTotal.toFixed(2)}
                            </div>
                        </div>
                        <div>
                            <button class="btn btn-primary" onclick="viewCartPage()">
                                <i class="fas fa-shopping-cart"></i>
                                View Full Cart
                            </button>
                        </div>
                    </div>
                `;
            });

            cartItems.innerHTML = html;
        }

        // View full cart page
        function viewCartPage() {
            window.location.href = '/cart';
        }

        // Load inbox messages
        async function loadInbox() {
            try {
                const response = await fetch('/api/inbox');
                const result = await response.json();

                if (result.success) {
                    displayInboxMessages(result.messages);
                    updateInboxBadge(result.messages.filter(m => !m.is_read).length);
                } else {
                    document.getElementById('inboxMessages').innerHTML = '<p style="color: var(--error-red);">Failed to load messages.</p>';
                }
            } catch (error) {
                console.error('Error loading inbox:', error);
                document.getElementById('inboxMessages').innerHTML = '<p style="color: var(--error-red);">Error loading messages.</p>';
            }
        }

        // Display inbox messages
        function displayInboxMessages(messages) {
            const container = document.getElementById('inboxMessages');

            if (!messages || messages.length === 0) {
                container.innerHTML = '<p style="color: var(--dark-gray); font-style: italic;">No messages in your inbox.</p>';
                return;
            }

            let html = '';
            messages.forEach(message => {
                const isRead = message.is_read ? 'read' : 'unread';
                const readIcon = message.is_read ? 'fas fa-envelope-open' : 'fas fa-envelope';

                html += `
                    <div class="message-item ${isRead}" style="border: 1px solid var(--medium-gray); border-radius: var(--border-radius); padding: 15px; margin-bottom: 10px; background: ${message.is_read ? 'var(--light-gray)' : 'var(--very-light-orange)'}">
                        <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 10px;">
                            <div>
                                <h4 style="margin: 0; color: var(--primary-blue);">${message.subject}</h4>
                                <small style="color: var(--dark-gray);">From: ${message.sender_name || 'OMUNJU SHOPPERS'} â€¢ ${new Date(message.created_at).toLocaleDateString()}</small>
                            </div>
                            <div>
                                <button class="btn" style="padding: 5px 10px; font-size: 0.8rem;" onclick="markMessageRead(${message.id})">
                                    <i class="${readIcon}"></i> ${message.is_read ? 'Read' : 'Mark Read'}
                                </button>
                            </div>
                        </div>
                        <p style="margin: 0; color: var(--darker-gray); line-height: 1.5;">${message.message}</p>
                    </div>
                `;
            });

            container.innerHTML = html;
        }

        // Mark message as read
        async function markMessageRead(messageId) {
            try {
                const response = await fetch(`/api/inbox/${messageId}/read`, {
                    method: 'PUT'
                });

                if (response.ok) {
                    loadInbox(); // Reload messages
                }
            } catch (error) {
                console.error('Error marking message read:', error);
            }
        }

        // Update inbox badge
        function updateInboxBadge(count) {
            const badge = document.getElementById('inboxBadge');
            if (count > 0) {
                badge.textContent = count;
                badge.style.display = 'inline-block';
            } else {
                badge.style.display = 'none';
            }
        }

        // Load invoices
        async function loadInvoices() {
            try {
                const response = await fetch('/api/invoices');
                const result = await response.json();

                if (result.success) {
                    displayInvoices(result.invoices);
                } else {
                    document.getElementById('invoicesList').innerHTML = '<p style="color: var(--error-red);">Failed to load invoices.</p>';
                }
            } catch (error) {
                console.error('Error loading invoices:', error);
                document.getElementById('invoicesList').innerHTML = '<p style="color: var(--error-red);">Error loading invoices.</p>';
            }
        }

        // Display invoices
        function displayInvoices(invoices) {
            const container = document.getElementById('invoicesList');

            if (!invoices || invoices.length === 0) {
                container.innerHTML = '<p style="color: var(--dark-gray); font-style: italic;">No invoices found.</p>';
                return;
            }

            let html = '<div style="overflow-x: auto;"><table class="invoices-table" style="width: 100%; border-collapse: collapse;">';
            html += `
                <thead>
                    <tr style="background: var(--light-gray);">
                        <th style="padding: 12px; text-align: left; border-bottom: 2px solid var(--medium-gray); color: var(--primary-blue);">Invoice #</th>
                        <th style="padding: 12px; text-align: left; border-bottom: 2px solid var(--medium-gray); color: var(--primary-blue);">Order ID</th>
                        <th style="padding: 12px; text-align: left; border-bottom: 2px solid var(--medium-gray); color: var(--primary-blue);">Amount</th>
                        <th style="padding: 12px; text-align: left; border-bottom: 2px solid var(--medium-gray); color: var(--primary-blue);">Date</th>
                        <th style="padding: 12px; text-align: left; border-bottom: 2px solid var(--medium-gray); color: var(--primary-blue);">Actions</th>
                    </tr>
                </thead>
                <tbody>
            `;

            invoices.forEach(invoice => {
                html += `
                    <tr style="border-bottom: 1px solid var(--medium-gray);">
                        <td style="padding: 12px;">${invoice.invoice_number}</td>
                        <td style="padding: 12px;">${invoice.order_id}</td>
                        <td style="padding: 12px;">$${invoice.total_amount.toFixed(2)}</td>
                        <td style="padding: 12px;">${new Date(invoice.created_at).toLocaleDateString()}</td>
                        <td style="padding: 12px;">
                            <button class="btn btn-primary" style="padding: 5px 10px; font-size: 0.8rem;" onclick="downloadInvoice(${invoice.order_id})">
                                <i class="fas fa-download"></i> Download
                            </button>
                        </td>
                    </tr>
                `;
            });

            html += '</tbody></table></div>';
            container.innerHTML = html;
        }

        // Download invoice
        function downloadInvoice(orderId) {
            window.open(`/api/invoices/download/${orderId}`, '_blank');
        }

        // Restart onboarding
        document.getElementById('restartOnboardingBtn').addEventListener('click', async () => {
            if (confirm('Are you sure you want to view the introduction again?')) {
                try {
                    const response = await fetch('/api/onboarding/reset', {
                        method: 'POST'
                    });

                    if (response.ok) {
                        window.location.href = '/onboarding';
                    } else {
                        showAlert('Failed to restart introduction. Please try again.', 'error');
                    }
                } catch (error) {
                    console.error('Error restarting onboarding:', error);
                    showAlert('Failed to restart introduction. Please try again.', 'error');
                }
            }
        });

        // Open WhatsApp support
        function openWhatsApp() {
            const phoneNumber = '+254712345678'; // Replace with actual support number
            const message = encodeURIComponent('Hi! I need help with OMUNJU SHOPPERS. Can you assist me?');
            const whatsappUrl = `https://wa.me/${phoneNumber}?text=${message}`;
            window.open(whatsappUrl, '_blank');
        }

        // Start automatic redirect countdown
        function startRedirectCountdown() {
            let timeLeft = 15;
            const countdownTimer = document.getElementById('countdownTimer');
            const countdownProgress = document.getElementById('countdownProgress');
            const redirectCountdown = document.getElementById('redirectCountdown');

            const countdownInterval = setInterval(() => {
                timeLeft--;
                countdownTimer.textContent = timeLeft;
                countdownProgress.style.width = (timeLeft / 15) * 100 + '%';

                if (timeLeft <= 0) {
                    clearInterval(countdownInterval);
                    redirectToHome();
                }
            }, 1000);
        }

        // Redirect to home page
        function redirectToHome() {
            window.location.href = '/';
        }

        // Show alert
        function showAlert(message, type, alertId = 'alert') {
            const alertDiv = document.getElementById(alertId);
            alertDiv.textContent = message;
            alertDiv.className = `alert alert-${type}`;
            alertDiv.style.display = 'block';

            // Auto-hide success messages
            if (type === 'success') {
                setTimeout(() => {
                    alertDiv.style.display = 'none';
                }, 5000);
            }
        }
    </script>
