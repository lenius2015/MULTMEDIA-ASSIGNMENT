<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= auction.title %> - Auctions - OMUNJU SHOPPERS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
    <style>
        .auction-detail-hero {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 60px 0;
        }

        .auction-detail-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .auction-detail-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 50px;
            align-items: start;
        }

        .auction-image-section {
            position: relative;
        }

        .auction-main-image {
            width: 100%;
            height: 400px;
            object-fit: cover;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .auction-status-badge {
            position: absolute;
            top: 20px;
            right: 20px;
            padding: 8px 16px;
            border-radius: 25px;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.9rem;
        }

        .status-active { background: rgba(39, 174, 96, 0.9); }
        .status-scheduled { background: rgba(52, 152, 219, 0.9); }
        .status-completed { background: rgba(231, 76, 60, 0.9); }

        .auction-info-section h1 {
            font-size: 2.5rem;
            margin-bottom: 15px;
            color: #2c3e50;
        }

        .auction-description {
            color: #7f8c8d;
            line-height: 1.6;
            margin-bottom: 30px;
            font-size: 1.1rem;
        }

        .auction-meta {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .meta-item {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }

        .meta-label {
            font-size: 0.9rem;
            color: #7f8c8d;
            text-transform: uppercase;
            margin-bottom: 8px;
        }

        .meta-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: #2c3e50;
        }

        .meta-value.currency {
            color: #27ae60;
        }

        .auction-timer-section {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
            color: white;
            padding: 30px;
            border-radius: 15px;
            text-align: center;
            margin-bottom: 30px;
        }

        .timer-title {
            font-size: 1.1rem;
            opacity: 0.9;
            margin-bottom: 15px;
        }

        .timer-display {
            font-size: 3rem;
            font-weight: 700;
            font-family: 'Courier New', monospace;
            margin-bottom: 10px;
        }

        .timer-status {
            font-size: 1.1rem;
            opacity: 0.8;
        }

        .bidding-section {
            background: white;
            border: 2px solid #ecf0f1;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
        }

        .bidding-title {
            font-size: 1.5rem;
            color: #2c3e50;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .current-bid-info {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .bid-input-group {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .bid-input {
            flex: 1;
            padding: 15px;
            border: 2px solid #ecf0f1;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .bid-input:focus {
            outline: none;
            border-color: #3498db;
        }

        .min-bid-text {
            color: #7f8c8d;
            font-size: 0.9rem;
            margin-top: 5px;
        }

        .btn-bid {
            background: linear-gradient(135deg, #27ae60, #229954);
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .btn-bid:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(39, 174, 96, 0.3);
        }

        .btn-bid:disabled {
            background: #bdc3c7;
            cursor: not-allowed;
            transform: none;
        }

        .login-prompt {
            text-align: center;
            padding: 30px;
            background: #fff3cd;
            border-radius: 10px;
            border: 1px solid #ffeaa7;
        }

        .login-prompt p {
            color: #856404;
            margin-bottom: 20px;
            font-size: 1.1rem;
        }

        .btn-login {
            background: #f39c12;
            color: white;
            padding: 12px 24px;
            text-decoration: none;
            border-radius: 6px;
            font-weight: 600;
            display: inline-block;
            transition: background 0.3s ease;
        }

        .btn-login:hover {
            background: #e67e22;
        }

        .bid-history {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            overflow: hidden;
        }

        .bid-history-header {
            background: #f8f9fa;
            padding: 20px;
            border-bottom: 1px solid #ecf0f1;
        }

        .bid-history-title {
            font-size: 1.3rem;
            color: #2c3e50;
            margin: 0;
        }

        .bid-list {
            max-height: 400px;
            overflow-y: auto;
        }

        .bid-item {
            padding: 15px 20px;
            border-bottom: 1px solid #f8f9fa;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .bid-item:last-child {
            border-bottom: none;
        }

        .bidder-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .bidder-avatar {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
        }

        .bidder-details h4 {
            margin: 0;
            color: #2c3e50;
            font-size: 1rem;
        }

        .bid-time {
            color: #7f8c8d;
            font-size: 0.9rem;
        }

        .bid-amount {
            font-size: 1.3rem;
            font-weight: 700;
            color: #27ae60;
        }

        .winning-badge {
            background: #d4edda;
            color: #155724;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.8rem;
            font-weight: 600;
            margin-left: 10px;
        }

        .no-bids {
            text-align: center;
            padding: 40px;
            color: #7f8c8d;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #3498db;
            text-decoration: none;
            font-weight: 500;
            margin-bottom: 20px;
            transition: color 0.3s ease;
        }

        .back-link:hover {
            color: #2980b9;
        }

        /* Winner Celebration Animation */
        .winner-celebration {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 10000;
            display: flex;
            align-items: center;
            justify-content: center;
            animation: winnerFadeIn 0.8s ease forwards;
        }

        .celebration-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(5px);
        }

        .winner-content {
            position: relative;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            color: white;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            max-width: 500px;
            width: 90%;
            animation: winnerBounce 0.6s ease 0.8s both;
            z-index: 10001;
        }

        .winner-icon {
            font-size: 4rem;
            color: #ffd700;
            margin-bottom: 20px;
            animation: trophySpin 2s ease-in-out infinite;
        }

        .winner-content h2 {
            font-size: 2.2rem;
            margin-bottom: 10px;
            background: linear-gradient(45deg, #fff, #ffd700);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .winner-message {
            font-size: 1.3rem;
            margin-bottom: 25px;
            opacity: 0.9;
        }

        .winner-details {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 25px;
        }

        .winner-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .winner-item:last-child {
            margin-bottom: 0;
        }

        .winner-label {
            font-weight: 600;
            opacity: 0.8;
        }

        .winner-value {
            font-weight: 700;
            font-size: 1.1rem;
            color: #ffd700;
        }

        .winner-actions {
            display: flex;
            gap: 15px;
            justify-content: center;
        }

        .btn-celebrate, .btn-close-celebration {
            padding: 12px 24px;
            border: none;
            border-radius: 25px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

        .btn-celebrate {
            background: linear-gradient(45deg, #ff6b35, #f7931e);
            color: white;
        }

        .btn-celebrate:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(255, 107, 53, 0.4);
        }

        .btn-close-celebration {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .btn-close-celebration:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: scale(1.05);
        }

        /* Confetti Animation */
        .confetti-container {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            pointer-events: none;
            overflow: hidden;
        }

        .confetti-piece {
            position: absolute;
            width: 10px;
            height: 10px;
            background: #ffd700;
            animation: confettiFall 3s ease-in-out infinite;
        }

        .confetti-piece:nth-child(1) { left: 10%; animation-delay: 0s; background: #ff6b35; }
        .confetti-piece:nth-child(2) { left: 20%; animation-delay: 0.2s; background: #4ecdc4; }
        .confetti-piece:nth-child(3) { left: 30%; animation-delay: 0.4s; background: #ffd700; }
        .confetti-piece:nth-child(4) { left: 40%; animation-delay: 0.6s; background: #ff6b35; }
        .confetti-piece:nth-child(5) { left: 50%; animation-delay: 0.8s; background: #4ecdc4; }
        .confetti-piece:nth-child(6) { left: 60%; animation-delay: 1s; background: #ffd700; }
        .confetti-piece:nth-child(7) { left: 70%; animation-delay: 1.2s; background: #ff6b35; }
        .confetti-piece:nth-child(8) { left: 80%; animation-delay: 1.4s; background: #4ecdc4; }
        .confetti-piece:nth-child(9) { left: 90%; animation-delay: 1.6s; background: #ffd700; }
        .confetti-piece:nth-child(10) { left: 95%; animation-delay: 1.8s; background: #ff6b35; }

        @keyframes winnerFadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @keyframes winnerBounce {
            0% { transform: scale(0.3); opacity: 0; }
            50% { transform: scale(1.05); }
            70% { transform: scale(0.9); }
            100% { transform: scale(1); opacity: 1; }
        }

        @keyframes trophySpin {
            0%, 100% { transform: rotateY(0deg); }
            50% { transform: rotateY(180deg); }
        }

        @keyframes confettiFall {
            0% {
                transform: translateY(-100px) rotate(0deg);
                opacity: 1;
            }
            100% {
                transform: translateY(100vh) rotate(720deg);
                opacity: 0;
            }
        }

        @keyframes confettiBurst {
            0% { opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { opacity: 0; }
        }

        @keyframes trophyCelebrate {
            0%, 100% { transform: rotateY(0deg) scale(1); }
            25% { transform: rotateY(90deg) scale(1.1); }
            50% { transform: rotateY(180deg) scale(1.2); }
            75% { transform: rotateY(270deg) scale(1.1); }
        }

        @keyframes floatUp {
            0% {
                transform: translateY(0) scale(1);
                opacity: 1;
            }
            100% {
                transform: translateY(-100px) scale(1.5);
                opacity: 0;
            }
        }

        @keyframes winnerFadeOut {
            from { opacity: 1; transform: scale(1); }
            to { opacity: 0; transform: scale(0.8); }
        }

        @media (max-width: 768px) {
            .auction-detail-grid {
                grid-template-columns: 1fr;
                gap: 30px;
            }

            .auction-detail-hero {
                padding: 40px 0;
            }

            .auction-info-section h1 {
                font-size: 2rem;
            }

            .auction-meta {
                grid-template-columns: 1fr;
            }

            .bid-input-group {
                flex-direction: column;
                align-items: stretch;
            }

            .btn-bid {
                width: 100%;
                justify-content: center;
            }

            .winner-content {
                padding: 30px 20px;
                margin: 20px;
            }

            .winner-content h2 {
                font-size: 1.8rem;
            }

            .winner-actions {
                flex-direction: column;
            }

            .btn-celebrate, .btn-close-celebration {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <%- include('./partials/header', { page: 'auctions', user: user }) %>

    <main>
        <!-- Back Link -->
        <div class="container" style="padding-top: 20px;">
            <a href="/auctions" class="back-link">
                <i class="fas fa-arrow-left"></i>
                Back to Auctions
            </a>
        </div>

        <!-- Auction Hero -->
        <section class="auction-detail-hero">
            <div class="auction-detail-container">
                <div class="auction-detail-grid">
                    <div class="auction-image-section">
                        <img src="<%= auction.product_image || '/images/product-placeholder.jpg' %>"
                             alt="<%= auction.product_name %>" class="auction-main-image">
                        <div class="auction-status-badge status-<%= auction.status %>">
                            <%= auction.status %>
                        </div>
                    </div>

                    <div class="auction-info-section">
                        <h1><%= auction.title %></h1>
                        <p class="auction-description">
                            <%= auction.description || 'No description available.' %>
                        </p>

                        <div class="auction-meta">
                            <div class="meta-item">
                                <div class="meta-label">Current Bid</div>
                                <div class="meta-value currency">$<%= auction.current_bid || auction.starting_bid %></div>
                            </div>
                            <div class="meta-item">
                                <div class="meta-label">Total Bids</div>
                                <div class="meta-value"><%= auction.total_bids || 0 %></div>
                            </div>
                            <div class="meta-item">
                                <div class="meta-label">Bidders</div>
                                <div class="meta-value"><%= auction.total_bidders || 0 %></div>
                            </div>
                        </div>

                        <!-- Timer Section -->
                        <div class="auction-timer-section" id="timerSection">
                            <div class="timer-title">Auction Status</div>
                            <div class="timer-display" id="auctionTimer">Loading...</div>
                            <div class="timer-status" id="timerStatus"></div>
                        </div>

                        <!-- Bidding Section -->
                        <% if (canBid) { %>
                        <div class="bidding-section">
                            <h3 class="bidding-title">
                                <i class="fas fa-gavel"></i>
                                Place Your Bid
                            </h3>

                            <div class="current-bid-info">
                                <strong>Current Highest Bid:</strong> $<%= auction.current_bid || auction.starting_bid %>
                                <br>
                                <strong>Minimum Next Bid:</strong> $<%= (auction.current_bid || auction.starting_bid) + auction.bid_increment %>
                            </div>

                            <div class="bid-input-group">
                                <input type="number" id="bidAmount" class="bid-input"
                                       placeholder="Enter your bid amount" min="<%= (auction.current_bid || auction.starting_bid) + auction.bid_increment %>"
                                       step="<%= auction.bid_increment %>">
                                <button class="btn-bid" id="placeBidBtn" onclick="placeBid()">
                                    <i class="fas fa-gavel"></i>
                                    Place Bid
                                </button>
                            </div>
                            <div class="min-bid-text" id="minBidText">
                                Minimum bid: $<%= (auction.current_bid || auction.starting_bid) + auction.bid_increment %>
                            </div>
                        </div>
                        <% } else if (auction.status === 'scheduled') { %>
                        <div class="bidding-section">
                            <div style="text-align: center; padding: 30px; color: #7f8c8d;">
                                <i class="fas fa-clock" style="font-size: 3rem; margin-bottom: 15px;"></i>
                                <h3>This auction hasn't started yet</h3>
                                <p>Check back when the auction begins to place your bids!</p>
                            </div>
                        </div>
                        <% } else if (auction.status === 'ended') { %>
                        <div class="bidding-section">
                            <% if (isWinner) { %>
                            <!-- Winner Animation -->
                            <div class="winner-celebration" id="winnerAnimation">
                                <div class="celebration-overlay"></div>
                                <div class="winner-content">
                                    <div class="winner-icon">
                                        <i class="fas fa-trophy"></i>
                                    </div>
                                    <div class="winner-text">
                                        <h2>Congratulations <%= user.name %>! ðŸŽ‰</h2>
                                        <p class="winner-message">You won this auction!</p>
                                        <div class="winner-details">
                                            <div class="winner-item">
                                                <span class="winner-label">Winning Bid:</span>
                                                <span class="winner-value">$<%= auction.winning_bid %></span>
                                            </div>
                                            <div class="winner-item">
                                                <span class="winner-label">Item:</span>
                                                <span class="winner-value"><%= auction.product_name %></span>
                                            </div>
                                        </div>
                                        <div class="winner-actions">
                                            <button class="btn-celebrate" onclick="celebrateWin()">Celebrate! ðŸŽŠ</button>
                                            <button class="btn-close-celebration" onclick="closeWinnerAnimation()">Continue</button>
                                        </div>
                                    </div>
                                    <!-- Confetti Animation -->
                                    <div class="confetti-container" id="confettiContainer">
                                        <div class="confetti-piece"></div>
                                        <div class="confetti-piece"></div>
                                        <div class="confetti-piece"></div>
                                        <div class="confetti-piece"></div>
                                        <div class="confetti-piece"></div>
                                        <div class="confetti-piece"></div>
                                        <div class="confetti-piece"></div>
                                        <div class="confetti-piece"></div>
                                        <div class="confetti-piece"></div>
                                        <div class="confetti-piece"></div>
                                    </div>
                                </div>
                            </div>
                            <% } else { %>
                            <div style="text-align: center; padding: 30px; color: #27ae60;">
                                <i class="fas fa-check-circle" style="font-size: 3rem; margin-bottom: 15px;"></i>
                                <h3>Auction Ended</h3>
                                <p>Winner: <%= auction.winner_name || 'Anonymous' %> | Winning Bid: $<%= auction.winning_bid %></p>
                            </div>
                            <% } %>
                        </div>
                        <% } else { %>
                        <div class="login-prompt">
                            <p>To participate in auctions and place bids, you need to be logged in.</p>
                            <a href="/login" class="btn-login">Login to Bid</a>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </section>

        <!-- Bid History -->
        <section style="padding: 80px 0; background: #f8f9fa;">
            <div class="container">
                <div class="bid-history">
                    <div class="bid-history-header">
                        <h3 class="bid-history-title">Bid History</h3>
                    </div>
                    <div class="bid-list" id="bidList">
                        <% if (bids && bids.length > 0) { %>
                            <% bids.forEach(bid => { %>
                            <div class="bid-item">
                                <div class="bidder-info">
                                    <div class="bidder-avatar">
                                        <%= bid.bidder_name ? bid.bidder_name.charAt(0).toUpperCase() : 'A' %>
                                    </div>
                                    <div class="bidder-details">
                                        <h4><%= bid.bidder_name || 'Anonymous' %></h4>
                                        <div class="bid-time"><%= new Date(bid.bid_time).toLocaleString() %></div>
                                    </div>
                                </div>
                                <div style="text-align: right;">
                                    <div class="bid-amount">$<%= bid.bid_amount %></div>
                                </div>
                            </div>
                            <% }); %>
                        <% } else { %>
                            <div class="no-bids">
                                <i class="fas fa-history" style="font-size: 2rem; margin-bottom: 10px;"></i>
                                <p>No bids have been placed yet.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <%- include('./partials/footer') %>

    <script type="application/json" id="auction-data">
        {
            "auction": <%- JSON.stringify(auction) %>,
            "canBid": <%- JSON.stringify(canBid) %>
        }
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            initializeTimer();
        });

        function initializeTimer() {
            const auctionData = JSON.parse(document.getElementById('auction-data').textContent);
            const auction = auctionData.auction;
            const timerElement = document.getElementById('auctionTimer');
            const statusElement = document.getElementById('timerStatus');
            const timerSection = document.getElementById('timerSection');

            if (auction.status === 'completed') {
                timerElement.textContent = 'AUCTION ENDED';
                statusElement.textContent = `Ended on ${new Date(auction.end_date).toLocaleDateString()}`;
                timerSection.style.background = 'linear-gradient(135deg, #95a5a6, #7f8c8d)';
            } else if (auction.status === 'scheduled') {
                const startDate = new Date(auction.start_date);
                initializeCountdownTimer(startDate, timerElement, statusElement, 'starts');
            } else if (auction.status === 'active') {
                const endDate = new Date(auction.end_date);
                initializeCountdownTimer(endDate, timerElement, statusElement, 'ends');
            }
        }

        function initializeCountdownTimer(targetDate, timerElement, statusElement, action) {
            function updateTimer() {
                const now = new Date();
                const timeLeft = targetDate - now;

                if (timeLeft <= 0) {
                    timerElement.textContent = action === 'starts' ? 'STARTING SOON' : 'AUCTION ENDED';
                    statusElement.textContent = action === 'starts' ? 'Auction is about to begin!' : 'Auction has ended';
                    return;
                }

                const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
                const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

                if (days > 0) {
                    timerElement.textContent = `${days}d ${hours}h ${minutes}m`;
                } else if (hours > 0) {
                    timerElement.textContent = `${hours}h ${minutes}m ${seconds}s`;
                } else {
                    timerElement.textContent = `${minutes}m ${seconds}s`;
                }

                statusElement.textContent = `Auction ${action} in...`;
            }

            updateTimer();
            setInterval(updateTimer, 1000);
        }

        async function placeBid() {
            const bidAmount = parseFloat(document.getElementById('bidAmount').value);
            const auctionData = JSON.parse(document.getElementById('auction-data').textContent);
            const auction = auctionData.auction;

            if (!bidAmount || bidAmount <= 0) {
                alert('Please enter a valid bid amount');
                return;
            }

            const currentBid = auction.current_bid || auction.starting_bid;
            const minBid = currentBid + auction.bid_increment;

            if (bidAmount < minBid) {
                alert(`Minimum bid amount is $${minBid}`);
                return;
            }

            const placeBidBtn = document.getElementById('placeBidBtn');
            const originalText = placeBidBtn.innerHTML;
            placeBidBtn.disabled = true;
            placeBidBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Placing Bid...';

            try {
                const response = await fetch(`/auctions/${auction.id}/bid`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ bid_amount: bidAmount })
                });

                const result = await response.json();

                if (result.success) {
                    alert('Bid placed successfully!');
                    location.reload(); // Refresh to show updated bid history
                } else {
                    alert('Failed to place bid: ' + result.message);
                    placeBidBtn.disabled = false;
                    placeBidBtn.innerHTML = originalText;
                }
            } catch (error) {
                console.error('Error placing bid:', error);
                alert('Error placing bid. Please try again.');
                placeBidBtn.disabled = false;
                placeBidBtn.innerHTML = originalText;
            }
        }

        // Update bid input minimum value dynamically
        document.getElementById('bidAmount').addEventListener('focus', function() {
            const auctionData = JSON.parse(document.getElementById('auction-data').textContent);
            const auction = auctionData.auction;
            const currentBid = auction.current_bid || auction.starting_bid;
            const minBid = currentBid + auction.bid_increment;

            this.min = minBid;
            document.getElementById('minBidText').textContent = `Minimum bid: $${minBid}`;
        });

