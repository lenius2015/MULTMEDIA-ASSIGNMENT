  <script>
    let socket;
    let currentCountdownEvent = null;

    document.addEventListener('DOMContentLoaded', function() {
      initializeSocket();
    });

    function initializeSocket() {
      socket = io();

      socket.on('connect', () => {
        console.log('Connected to server');
        // Request active countdowns
        socket.emit('get_active_countdowns');
      });

      socket.on('active_countdowns', (data) => {
        if (data.events && data.events.length > 0) {
          // Use the first active countdown for the promo section
          currentCountdownEvent = data.events[0];
          startCountdown(currentCountdownEvent);
        }
      });

      socket.on('countdown_started', (data) => {
        console.log('Countdown started:', data);
        // Refresh countdowns
        socket.emit('get_active_countdowns');
      });

      socket.on('countdown_stopped', (data) => {
        console.log('Countdown stopped:', data);
        // Refresh countdowns
        socket.emit('get_active_countdowns');
      });

      socket.on('countdown_updated', (data) => {
        console.log('Countdown updated:', data);
        // Refresh countdowns
        socket.emit('get_active_countdowns');
      });

      socket.on('countdown_deleted', (data) => {
        console.log('Countdown deleted:', data);
        // Refresh countdowns
        socket.emit('get_active_countdowns');
      });

      socket.on('error', (data) => {
        console.error('Socket error:', data.message);
      });
    }

    function startCountdown(event) {
      const countdownElement = document.getElementById('promoCountdown');
      const hoursElement = document.getElementById('hours');
      const minutesElement = document.getElementById('minutes');
      const secondsElement = document.getElementById('seconds');
      const eventTitleElement = document.getElementById('eventTitle');
      const eventTypeElement = document.getElementById('eventType');

      // Update event info
      eventTitleElement.textContent = event.title;
      eventTypeElement.textContent = event.event_type.replace('_', ' ');

      function updateCountdown() {
        const now = new Date();
        const endDate = new Date(event.end_date);
        const timeLeft = endDate - now;

        if (timeLeft <= 0) {
          // Countdown ended
          hoursElement.textContent = '00';
          minutesElement.textContent = '00';
          secondsElement.textContent = '00';
          eventTypeElement.textContent = 'Ended';
          return;
        }

        const hours = Math.floor(timeLeft / (1000 * 60 * 60));
        const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

        hoursElement.textContent = hours.toString().padStart(2, '0');
        minutesElement.textContent = minutes.toString().padStart(2, '0');
        secondsElement.textContent = seconds.toString().padStart(2, '0');
      }

      // Update immediately
      updateCountdown();

      // Update every second
      setInterval(updateCountdown, 1000);
    }

    function exploreCategory(category) {
      window.location.href = `/category/${encodeURIComponent(category)}`;
    }

    // Add to Cart functionality
    document.querySelectorAll('.add-to-cart-btn').forEach(button => {
      button.addEventListener('click', async function() {
        const productCard = this.closest('.product-card');
        const productId = productCard.dataset.productId;
        
        // Check if user is logged in
        const userData = document.body.getAttribute('data-user');
        if (!userData || userData === 'null') {
          alert('Please login to add items to cart');
          window.location.href = '/login';
          return;
        }
        
        // Show loading state
        this.textContent = 'Adding...';
        this.disabled = true;
        
        try {
          const response = await fetch('/api/cart', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({
              productId: productId,
              quantity: 1
            })
          });
          
          const result = await response.json();
          
          if (result.success) {
            alert('âœ“ Added to cart!');
            updateCartBadge();
          } else {
            alert('Failed to add: ' + result.message);
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Error adding to cart');
        }
        
        // Reset button
        this.innerHTML = '<i class="fas fa-shopping-cart"></i> Add to Cart';
        this.disabled = false;
      });
    });

    // Quick View functionality
    document.querySelectorAll('.quick-view-btn').forEach(button => {
      button.addEventListener('click', function() {
        const productCard = this.closest('.product-card');
        const productId = productCard.dataset.productId;
        
        if (productId) {
          window.location.href = '/product/' + productId;
        }
      });
    });

    // Update cart badge
    async function updateCartBadge() {
      try {
        const response = await fetch('/api/profile/cart');
        const result = await response.json();
        
        if (result.success) {
          const cartBadge = document.querySelector('.cart-badge');
          if (cartBadge) {
            cartBadge.textContent = result.itemCount || 0;
          }
        }
      } catch (error) {
        console.error('Error updating cart badge:', error);
      }
    }
  </script>
