<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation - OMUNJU SHOPPERS</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
    <style>
        :root {
            --primary-orange: #ff6b35;
            --primary-blue: #004e89;
            --accent-amber: #f77f00;
            --soft-orange: #ff8a65;
            --white: #ffffff;
            --light-gray: #f8f9fa;
            --medium-gray: #e0e0e0;
            --dark-gray: #666;
            --darker-gray: #1a1a1a;
            --success-green: #28a745;
            --shadow: 0 2px 4px rgba(0,0,0,0.08);
            --border-radius: 8px;
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--light-gray);
            color: var(--darker-gray);
            line-height: 1.6;
        }

        .confirmation-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .confirmation-card {
            background: var(--white);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            overflow: hidden;
        }

        .confirmation-header {
            background: linear-gradient(135deg, var(--success-green), #20c997);
            color: var(--white);
            padding: 40px;
            text-align: center;
        }

        .success-icon {
            width: 80px;
            height: 80px;
            background: var(--white);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }

        .success-icon i {
            font-size: 40px;
            color: var(--success-green);
        }

        .confirmation-title {
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .confirmation-subtitle {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        .order-number {
            background: rgba(255, 255, 255, 0.2);
            padding: 10px 20px;
            border-radius: 20px;
            display: inline-block;
            margin-top: 20px;
            font-weight: 600;
        }

        .confirmation-body {
            padding: 40px;
        }

        .info-section {
            margin-bottom: 30px;
        }

        .info-title {
            font-size: 1.2rem;
            color: var(--primary-blue);
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid var(--soft-orange);
        }

        .info-row {
            display: flex;
            margin-bottom: 10px;
        }

        .info-label {
            font-weight: 500;
            width: 150px;
            color: var(--dark-gray);
        }

        .info-value {
            flex: 1;
        }

        .order-summary {
            background: var(--light-gray);
            padding: 20px;
            border-radius: var(--border-radius);
            margin-top: 20px;
        }

        .summary-item {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid var(--medium-gray);
        }

        .summary-item:last-child {
            border-bottom: none;
        }

        .total-row {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--primary-orange);
            border-top: 2px solid var(--medium-gray);
            padding-top: 15px;
            margin-top: 10px;
        }

        .confirmation-footer {
            padding: 30px 40px;
            background: var(--light-gray);
            text-align: center;
        }

        .next-steps {
            margin-bottom: 20px;
        }

        .next-steps h4 {
            color: var(--dark-gray);
            margin-bottom: 15px;
        }

        .step {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-bottom: 10px;
            color: var(--dark-gray);
        }

        .step i {
            color: var(--success-green);
        }

        .btn {
            display: inline-block;
            padding: 12px 24px;
            border-radius: var(--border-radius);
            text-decoration: none;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            border: none;
            margin: 5px;
        }

        .btn-primary {
            background: var(--primary-orange);
            color: var(--white);
        }

        .btn-primary:hover {
            background: var(--accent-amber);
        }

        .btn-secondary {
            background: var(--white);
            color: var(--primary-orange);
            border: 1px solid var(--primary-orange);
        }

        .btn-secondary:hover {
            background: var(--soft-orange);
        }

        @media (max-width: 600px) {
            .info-row {
                flex-direction: column;
            }
            
            .info-label {
                width: auto;
                margin-bottom: 5px;
            }
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <%- include('./partials/header', { page: 'confirmation', user: user }) %>

    <div class="confirmation-container">
        <div class="confirmation-card">
            <!-- Success Header -->
            <div class="confirmation-header">
                <div class="success-icon">
                    <i class="fas fa-check"></i>
                </div>
                <h1 class="confirmation-title">Thank You for Your Order!</h1>
                <p class="confirmation-subtitle">Your order has been placed successfully</p>
                <div class="order-number">
                    Order #<span id="orderId">---</span>
                </div>
            </div>

            <!-- Confirmation Body -->
            <div class="confirmation-body">
                <!-- Shipping Info -->
                <div class="info-section">
                    <h3 class="info-title">
                        <i class="fas fa-shipping-fast"></i> Shipping Information
                    </h3>
                    <div class="info-row">
                        <span class="info-label">Name:</span>
                        <span class="info-value" id="shippingName">---</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Address:</span>
                        <span class="info-value" id="shippingAddress">---</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">City/Region:</span>
                        <span class="info-value" id="shippingCity">---</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Phone:</span>
                        <span class="info-value" id="shippingPhone">---</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Email:</span>
                        <span class="info-value" id="shippingEmail">---</span>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="info-section">
                    <h3 class="info-title">
                        <i class="fas fa-box"></i> Order Summary
                    </h3>
                    <div class="order-summary" id="orderSummary">
                        <div class="summary-item">
                            <span>Subtotal</span>
                            <span id="subtotal">---</span>
                        </div>
                        <div class="summary-item">
                            <span>Shipping</span>
                            <span id="shipping">---</span>
                        </div>
                        <div class="summary-item total-row">
                            <span>Total</span>
                            <span id="total">---</span>
                        </div>
                    </div>
                </div>

                <!-- Payment Info -->
                <div class="info-section">
                    <h3 class="info-title">
                        <i class="fas fa-credit-card"></i> Payment Method
                    </h3>
                    <div class="info-row">
                        <span class="info-label">Method:</span>
                        <span class="info-value" id="paymentMethod">---</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Status:</span>
                        <span class="info-value">
                            <span style="color: var(--success-green); font-weight: 600;">
                                <i class="fas fa-clock"></i> Pending
                            </span>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="confirmation-footer">
                <div class="next-steps">
                    <h4>What happens next?</h4>
                    <div class="step">
                        <i class="fas fa-check-circle"></i>
                        <span>You'll receive an email confirmation shortly</span>
                    </div>
                    <div class="step">
                        <i class="fas fa-box-packing"></i>
                        <span>We'll start preparing your order</span>
                    </div>
                    <div class="step">
                        <i class="fas fa-truck"></i>
                        <span>You'll be notified when it ships</span>
                    </div>
                </div>
                <a href="/dashboard" class="btn btn-primary">
                    <i class="fas fa-shopping-bag"></i> Continue Shopping
                </a>
                <a href="/orders" class="btn btn-secondary">
                    <i class="fas fa-list"></i> View Orders
                </a>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer') %>

    <script>
        // Load order details
        document.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const orderId = urlParams.get('orderId');

            if (orderId) {
                loadOrderDetails(orderId);
            } else {
                document.querySelector('.confirmation-card').innerHTML = `
                    <div class="confirmation-header" style="background: linear-gradient(135deg, #dc3545, #c82333);">
                        <div class="success-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <h1 class="confirmation-title">Order Not Found</h1>
                        <p class="confirmation-subtitle">We couldn't find your order details</p>
                    </div>
                    <div class="confirmation-body" style="text-align: center; padding: 40px;">
                        <a href="/dashboard" class="btn btn-primary">
                            <i class="fas fa-home"></i> Go Home
                        </a>
                    </div>
                `;
            }
        });

        async function loadOrderDetails(orderId) {
            try {
                const response = await fetch(`/api/orders/${orderId}`);
                const result = await response.json();

                if (result.success) {
                    const order = result.order;
                    
                    document.getElementById('orderId').textContent = orderId;
                    document.getElementById('shippingName').textContent = order.shipping_name || '---';
                    document.getElementById('shippingAddress').textContent = order.shipping_address || '---';
                    document.getElementById('shippingCity').textContent = `${order.shipping_city || ''} ${order.shipping_region ? ', ' + order.shipping_region : ''}`;
                    document.getElementById('shippingPhone').textContent = order.shipping_phone || '---';
                    document.getElementById('shippingEmail').textContent = order.shipping_email || '---';
                    
                    // Format payment method
                    const paymentMethodNames = {
                        'cash_on_delivery': 'Cash on Delivery',
                        'mobile_money': 'Mobile Money (M-Pesa)',
                        'bank_transfer': 'Bank Transfer'
                    };
                    document.getElementById('paymentMethod').textContent = paymentMethodNames[order.payment_method] || order.payment_method;

                    // Calculate totals
                    const total = parseFloat(order.total_amount) || 0;
                    const shipping = 5000; // Fixed shipping cost
                    const subtotal = total - shipping;

                    document.getElementById('subtotal').textContent = `TSH ${subtotal.toLocaleString()}`;
                    document.getElementById('shipping').textContent = `TSH ${shipping.toLocaleString()}`;
                    document.getElementById('total').textContent = `TSH ${total.toLocaleString()}`;
                } else {
                    console.error('Failed to load order:', result.message);
                }
            } catch (error) {
                console.error('Error loading order:', error);
            }
        }
    </script>
</body>
</html>
