<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order #<%= order.id %> - OMUNJU SHOPPERS</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        .order-details-container {
            max-width: 1000px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .order-header {
            background: white;
            border-radius: 12px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid #e0e0e0;
        }

        .order-title {
            font-size: 2rem;
            color: #333;
            margin-bottom: 10px;
        }

        .order-meta {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .meta-item {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #f0f0f0;
        }

        .meta-item:last-child {
            border-bottom: none;
            font-weight: 600;
            color: #333;
        }

        .order-status {
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            text-transform: uppercase;
            display: inline-block;
        }

        .status-paid { background: #d4edda; color: #155724; }
        .status-processing { background: #cce5ff; color: #004085; }
        .status-shipped { background: #d1ecf1; color: #0c5460; }
        .status-delivered { background: #d4edda; color: #155724; }
        .status-cancelled { background: #f8d7da; color: #721c24; }

        .delivery-section {
            background: white;
            border-radius: 12px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid #e0e0e0;
        }

        .delivery-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .delivery-title {
            font-size: 1.5rem;
            color: #333;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .delivery-status {
            padding: 6px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .delivery-tracking {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .tracking-info {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
        }

        .tracking-item {
            text-align: center;
        }

        .tracking-label {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 5px;
        }

        .tracking-value {
            font-weight: 600;
            color: #333;
        }

        .delivery-actions {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 20px;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }

        .btn-secondary {
            background: #f8f9fa;
            color: #333;
            border: 2px solid #e0e0e0;
        }

        .btn-secondary:hover {
            background: #e9ecef;
        }

        .order-items {
            background: white;
            border-radius: 12px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid #e0e0e0;
        }

        .items-title {
            font-size: 1.5rem;
            color: #333;
            margin-bottom: 20px;
        }

        .item-card {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 15px;
            display: grid;
            grid-template-columns: auto 1fr auto auto;
            gap: 20px;
            align-items: center;
        }

        .item-image {
            width: 60px;
            height: 60px;
            border-radius: 6px;
            object-fit: cover;
        }

        .item-info h4 {
            margin: 0;
            color: #333;
            font-size: 1.1rem;
        }

        .item-meta {
            color: #666;
            font-size: 0.9rem;
        }

        .review-section {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-top: 15px;
            border: 1px solid #e0e0e0;
        }

        .review-form {
            display: grid;
            gap: 15px;
        }

        .rating-stars {
            display: flex;
            gap: 5px;
        }

        .star {
            font-size: 1.5rem;
            color: #ddd;
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .star.active {
            color: #ffc107;
        }

        .review-textarea {
            width: 100%;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 6px;
            resize: vertical;
            min-height: 80px;
            font-family: inherit;
        }

        .existing-review {
            background: white;
            border-radius: 8px;
            padding: 15px;
            border: 1px solid #e0e0e0;
        }

        .review-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .review-rating {
            color: #ffc107;
        }

        .review-date {
            color: #666;
            font-size: 0.9rem;
        }

        .review-text {
            color: #333;
            line-height: 1.5;
        }

        .timeline {
            background: white;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid #e0e0e0;
        }

        .timeline-title {
            font-size: 1.5rem;
            color: #333;
            margin-bottom: 20px;
        }

        .timeline-item {
            display: flex;
            gap: 20px;
            padding: 20px 0;
            border-left: 2px solid #e0e0e0;
            position: relative;
        }

        .timeline-item::before {
            content: '';
            position: absolute;
            left: -6px;
            top: 20px;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: #667eea;
        }

        .timeline-item.active::before {
            background: #28a745;
            box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.2);
        }

        .timeline-content h4 {
            margin: 0 0 5px 0;
            color: #333;
        }

        .timeline-content p {
            margin: 0;
            color: #666;
            font-size: 0.9rem;
        }

        .timeline-date {
            color: #999;
            font-size: 0.8rem;
            margin-top: 5px;
        }

        @media (max-width: 768px) {
            .order-meta {
                grid-template-columns: 1fr;
            }

            .item-card {
                grid-template-columns: 1fr;
                gap: 10px;
                text-align: center;
            }

            .tracking-info {
                grid-template-columns: 1fr;
            }

            .delivery-actions {
                flex-direction: column;
            }

            .timeline-item {
                gap: 15px;
            }
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <%- include('./partials/header', { currentPage: 'orders' }) %>

    <div class="order-details-container">
        <!-- Order Header -->
        <div class="order-header">
            <h1 class="order-title">Order #<%= order.id %></h1>
            <div class="order-meta">
                <div class="meta-item">
                    <span>Order Date:</span>
                    <span><%= new Date(order.created_at).toLocaleDateString() %></span>
                </div>
                <div class="meta-item">
                    <span>Status:</span>
                    <span class="order-status status-<%= order.status.toLowerCase() %>"><%= order.status %></span>
                </div>
                <div class="meta-item">
                    <span>Items:</span>
                    <span><%= items.length %> item(s)</span>
                </div>
                <div class="meta-item">
                    <span>Total Amount:</span>
                    <span>TSH <%= order.total_amount.toFixed(2) %></span>
                </div>
            </div>
        </div>

        <!-- Delivery Section -->
        <div class="delivery-section">
            <div class="delivery-header">
                <h2 class="delivery-title">
                    <i class="fas fa-truck"></i>
                    Delivery Information
                </h2>
                <% if (deliveryRequest) { %>
                <span class="delivery-status status-<%= deliveryRequest.status.toLowerCase() %>">
                    <%= deliveryRequest.status.replace('_', ' ') %>
                </span>
                <% } %>
            </div>

            <% if (deliveryRequest) { %>
            <div class="delivery-tracking">
                <div class="tracking-info">
                    <div class="tracking-item">
                        <div class="tracking-label">Tracking Number</div>
                        <div class="tracking-value"><%= deliveryRequest.tracking_number %></div>
                    </div>
                    <div class="tracking-item">
                        <div class="tracking-label">Delivery Method</div>
                        <div class="tracking-value"><%= deliveryRequest.delivery_method %></div>
                    </div>
                    <div class="tracking-item">
                        <div class="tracking-label">Estimated Delivery</div>
                        <div class="tracking-value"><%= new Date(deliveryRequest.estimated_delivery).toLocaleDateString() %></div>
                    </div>
                    <% if (deliveryRequest.actual_delivery_date) { %>
                    <div class="tracking-item">
                        <div class="tracking-label">Delivered On</div>
                        <div class="tracking-value"><%= new Date(deliveryRequest.actual_delivery_date).toLocaleDateString() %></div>
                    </div>
                    <% } %>
                </div>
            </div>

            <div class="delivery-actions">
                <% if (deliveryRequest.status === 'pending') { %>
                <button class="btn btn-secondary" onclick="contactSupport()">
                    <i class="fas fa-phone"></i>
                    Contact Support
                </button>
                <% } else if (deliveryRequest.status === 'delivered') { %>
                <button class="btn btn-primary" onclick="downloadInvoice()">
                    <i class="fas fa-download"></i>
                    Download Invoice
                </button>
                <% } else { %>
                <button class="btn btn-secondary" onclick="trackDelivery()">
                    <i class="fas fa-map-marker-alt"></i>
                    Track Delivery
                </button>
                <% } %>
            </div>
            <% } else if (order.status === 'paid') { %>
            <div class="delivery-actions">
                <a href="/delivery-request?orderId=<%= order.id %>" class="btn btn-primary">
                    <i class="fas fa-truck"></i>
                    Request Delivery
                </a>
            </div>
            <% } %>
        </div>

        <!-- Order Items -->
        <div class="order-items">
            <h2 class="items-title">Order Items</h2>
            <% items.forEach(item => { %>
            <div class="item-card">
                <% if (item.image_url) { %>
                <img src="<%= item.image_url %>" alt="<%= item.name %>" class="item-image">
                <% } else { %>
                <div class="item-image" style="background: #f0f0f0; display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-image" style="color: #ccc;"></i>
                </div>
                <% } %>

                <div class="item-info">
                    <h4><%= item.name %></h4>
                    <div class="item-meta">
                        Quantity: <%= item.quantity %> |
                        Price: TSH <%= item.price.toFixed(2) %> |
                        Total: TSH <%= (item.price * item.quantity).toFixed(2) %>
                    </div>
                </div>

                <div class="item-actions">
                    <% if (deliveryRequest && deliveryRequest.status === 'delivered') { %>
                        <% if (item.review) { %>
                        <div class="existing-review">
                            <div class="review-header">
                                <div class="review-rating">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <i class="fas fa-star <%= i <= item.review.rating ? 'active' : '' %>"></i>
                                    <% } %>
                                </div>
                                <div class="review-date"><%= new Date(item.review.review_date).toLocaleDateString() %></div>
                            </div>
                            <% if (item.review.review_text) { %>
                            <div class="review-text"><%= item.review.review_text %></div>
                            <% } %>
                        </div>
                        <% } else { %>
                        <button class="btn btn-secondary review-btn"
                                data-order-id="<%= order.id %>"
                                data-product-id="<%= item.product_id %>"
                                data-product-name="<%= item.name.replace(/"/g, '&quot;') %>">
                            <i class="fas fa-star"></i>
                            Write Review
                        </button>
                        <% } %>
                    <% } else { %>
                    <button class="btn btn-secondary reorder-btn"
                            data-product-id="<%= item.product_id %>">
                        <i class="fas fa-redo"></i>
                        Reorder
                    </button>
                    <% } %>
                </div>
            </div>
            <% }); %>
        </div>

        <!-- Delivery Timeline -->
        <% if (deliveryRequest) { %>
        <div class="timeline">
            <h2 class="timeline-title">Delivery Timeline</h2>
            <div class="timeline-item <%= deliveryRequest.status === 'pending' ? 'active' : '' %>">
                <div class="timeline-content">
                    <h4>Delivery Requested</h4>
                    <p>Your delivery request has been submitted and is being processed.</p>
                    <div class="timeline-date"><%= new Date(deliveryRequest.created_at).toLocaleDateString() %></div>
                </div>
            </div>

            <div class="timeline-item <%= deliveryRequest.status === 'assigned' ? 'active' : '' %>">
                <div class="timeline-content">
                    <h4>Delivery Assigned</h4>
                    <p>A delivery agent has been assigned to handle your order.</p>
                    <% if (deliveryRequest.assigned_agent) { %>
                    <div class="timeline-date">Assigned to: <%= deliveryRequest.assigned_agent %></div>
                    <% } %>
                </div>
            </div>

            <div class="timeline-item <%= deliveryRequest.status === 'in_transit' ? 'active' : '' %>">
                <div class="timeline-content">
                    <h4>Out for Delivery</h4>
                    <p>Your order is on the way and will be delivered soon.</p>
                </div>
            </div>

            <div class="timeline-item <%= deliveryRequest.status === 'delivered' ? 'active' : '' %>">
                <div class="timeline-content">
                    <h4>Delivered</h4>
                    <p>Your order has been successfully delivered. Thank you for shopping with us!</p>
                    <% if (deliveryRequest.actual_delivery_date) { %>
                    <div class="timeline-date"><%= new Date(deliveryRequest.actual_delivery_date).toLocaleDateString() %></div>
                    <% } %>
                </div>
            </div>
        </div>
        <% } %>
    </div>

    <!-- Review Modal -->
    <div id="reviewModal" class="modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Write a Review</h3>
                <button class="modal-close" onclick="closeReviewModal()">&times;</button>
            </div>
            <div class="modal-body">
                <form id="reviewForm">
                    <input type="hidden" id="reviewOrderId" name="orderId">
                    <input type="hidden" id="reviewProductId" name="productId">

                    <div class="form-group">
                        <label for="reviewRating">Rating:</label>
                        <div class="rating-stars" id="reviewStars">
                            <i class="fas fa-star star" data-rating="1"></i>
                            <i class="fas fa-star star" data-rating="2"></i>
                            <i class="fas fa-star star" data-rating="3"></i>
                            <i class="fas fa-star star" data-rating="4"></i>
                            <i class="fas fa-star star" data-rating="5"></i>
                        </div>
                        <input type="hidden" id="reviewRating" name="rating" required>
                    </div>

                    <div class="form-group">
                        <label for="reviewText">Your Review (Optional):</label>
                        <textarea id="reviewText" name="reviewText" class="review-textarea" placeholder="Share your experience with this product..."></textarea>
                    </div>

                    <div class="form-actions">
                        <button type="button" class="btn btn-secondary" onclick="closeReviewModal()">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit Review</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer') %>

    <script>
        let currentRating = 0;

        // Modal styles
        const modalStyles = `
            .modal {
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 0, 0, 0.5);
                display: flex;
                align-items: center;
                justify-content: center;
                z-index: 1000;
            }

            .modal-content {
                background: white;
                border-radius: 12px;
                width: 90%;
                max-width: 500px;
                max-height: 90vh;
                overflow-y: auto;
            }

            .modal-header {
                padding: 20px;
                border-bottom: 1px solid #e0e0e0;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .modal-header h3 {
                margin: 0;
                color: #333;
            }

            .modal-close {
                background: none;
                border: none;
                font-size: 1.5rem;
                cursor: pointer;
                color: #666;
            }

            .modal-body {
                padding: 20px;
            }

            .form-group {
                margin-bottom: 20px;
            }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-weight: 500;
                color: #333;
            }
        `;

        // Add modal styles
        const style = document.createElement('style');
        style.textContent = modalStyles;
        document.head.appendChild(style);

        // Review modal functions
        function openReviewModal(orderId, productId, productName) {
            document.getElementById('reviewOrderId').value = orderId;
            document.getElementById('reviewProductId').value = productId;
            document.querySelector('.modal-header h3').textContent = `Review ${productName}`;

            // Reset form
            currentRating = 0;
            document.getElementById('reviewRating').value = '';
            document.getElementById('reviewText').value = '';
            updateStarDisplay();

            document.getElementById('reviewModal').style.display = 'flex';
        }

        function closeReviewModal() {
            document.getElementById('reviewModal').style.display = 'none';
        }

        function updateStarDisplay() {
            const stars = document.querySelectorAll('#reviewStars .star');
            stars.forEach((star, index) => {
                if (index < currentRating) {
                    star.classList.add('active');
                } else {
                    star.classList.remove('active');
                }
            });
        }

        // Star rating click
        document.addEventListener('click', (e) => {
            if (e.target.classList.contains('star')) {
                currentRating = parseInt(e.target.dataset.rating);
                document.getElementById('reviewRating').value = currentRating;
                updateStarDisplay();
            }
        });

        // Review form submission
        document.getElementById('reviewForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = new FormData(e.target);

            try {
                const response = await fetch(`/api/delivery/review/${formData.get('orderId')}/${formData.get('productId')}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        rating: formData.get('rating'),
                        reviewText: formData.get('reviewText')
                    })
                });

                const result = await response.json();

                if (result.success) {
                    alert('Review submitted successfully!');
                    closeReviewModal();
                    location.reload(); // Refresh to show the review
                } else {
                    alert(result.message || 'Failed to submit review');
                }
            } catch (error) {
                console.error('Error submitting review:', error);
                alert('Failed to submit review. Please try again.');
            }
        });

        // Other functions
        function contactSupport() {
            window.open('https://wa.me/254712345678?text=Hi! I need help with my order', '_blank');
        }

        function trackDelivery() {
            alert('Delivery tracking feature coming soon!');
        }

        async function downloadInvoice() {
            try {
                const response = await fetch(`/api/invoices/download/<%= order.id %>`);
                if (response.ok) {
                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.style.display = 'none';
                    a.href = url;
                    a.download = `invoice-<%= order.id %>.pdf`;
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(url);
                    document.body.removeChild(a);
                } else {
                    alert('Invoice not available yet.');
                }
            } catch (error) {
                console.error('Error downloading invoice:', error);
                alert('Failed to download invoice.');
            }
        }

        async function reorderItem(productId) {
            try {
                const response = await fetch('/api/cart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        productId: productId,
                        quantity: 1
                    })
                });

                const result = await response.json();

                if (result.success) {
                    if (confirm('Item added to cart. Would you like to view your cart?')) {
                        window.location.href = '/cart';
                    }
                } else {
                    alert(result.message || 'Failed to add item to cart');
                }
            } catch (error) {
                console.error('Error reordering item:', error);
                alert('Failed to reorder item. Please try again.');
            }
        }

        // Event listeners for data attribute buttons
        document.addEventListener('click', (e) => {
            if (e.target.closest('.review-btn')) {
                const btn = e.target.closest('.review-btn');
                const orderId = btn.getAttribute('data-order-id');
                const productId = btn.getAttribute('data-product-id');
                const productName = btn.getAttribute('data-product-name');
                openReviewModal(orderId, productId, productName);
            }

            if (e.target.closest('.reorder-btn')) {
                const btn = e.target.closest('.reorder-btn');
                const productId = btn.getAttribute('data-product-id');
                reorderItem(productId);
            }
        });

        // Close modal when clicking outside
        document.getElementById('reviewModal').addEventListener('click', (e) => {
            if (e.target.id === 'reviewModal') {
                closeReviewModal();
            }
        });
    </script>
</body>
</html>