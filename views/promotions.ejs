<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        .promotions-hero {
            background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
            color: white;
            padding: 80px 0;
            text-align: center;
        }

        .promotions-hero h1 {
            font-size: 3rem;
            margin-bottom: 16px;
            font-weight: 700;
        }

        .promotions-hero p {
            font-size: 1.2rem;
            opacity: 0.9;
            max-width: 600px;
            margin: 0 auto;
        }

        .promotions-controls {
            background: white;
            padding: 30px 0;
            border-bottom: 1px solid #e0e0e0;
        }

        .controls-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .sort-controls {
            display: flex;
            gap: 16px;
            align-items: center;
        }

        .sort-label {
            font-weight: 600;
            color: #2c3e50;
        }

        .sort-select {
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
            background: white;
            font-size: 14px;
        }

        .results-count {
            color: #7f8c8d;
            font-size: 14px;
        }

        .products-section {
            padding: 60px 0;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 30px;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .product-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.07);
            overflow: hidden;
            transition: all 0.3s ease;
            position: relative;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .product-badge {
            position: absolute;
            top: 12px;
            left: 12px;
            background: #e74c3c;
            color: white;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            z-index: 2;
        }

        .product-image {
            width: 100%;
            height: 250px;
            object-fit: cover;
            position: relative;
        }

        .product-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.4);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .product-card:hover .product-overlay {
            opacity: 1;
        }

        .quick-view-btn {
            background: white;
            color: #2c3e50;
            border: none;
            padding: 12px 20px;
            border-radius: 25px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .quick-view-btn:hover {
            background: #f8f9fa;
            transform: scale(1.05);
        }

        .product-info {
            padding: 20px;
        }

        .product-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .product-rating {
            display: flex;
            align-items: center;
            gap: 4px;
            margin-bottom: 12px;
        }

        .product-rating i {
            color: #f39c12;
            font-size: 0.9rem;
        }

        .rating-count {
            color: #7f8c8d;
            font-size: 0.85rem;
            margin-left: 4px;
        }

        .product-price {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 16px;
        }

        .price-current {
            font-size: 1.3rem;
            font-weight: 700;
            color: #2c3e50;
        }

        .price-original {
            font-size: 1rem;
            color: #7f8c8d;
            text-decoration: line-through;
        }

        .price-discount {
            background: #e74c3c;
            color: white;
            padding: 2px 6px;
            border-radius: 4px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .product-savings {
            color: #27ae60;
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 16px;
        }

        .add-to-cart-btn {
            width: 100%;
            background: linear-gradient(135deg, #27ae60, #229954);
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .add-to-cart-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(39, 174, 96, 0.3);
        }

        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 8px;
            margin-top: 40px;
        }

        .pagination-btn {
            padding: 10px 16px;
            border: 1px solid #ddd;
            background: white;
            color: #2c3e50;
            text-decoration: none;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

        .pagination-btn:hover,
        .pagination-btn.active {
            background: #3498db;
            color: white;
            border-color: #3498db;
        }

        .no-products {
            text-align: center;
            padding: 80px 20px;
            color: #7f8c8d;
        }

        .no-products i {
            font-size: 4rem;
            margin-bottom: 20px;
            display: block;
        }

        @media (max-width: 768px) {
            .promotions-hero {
                padding: 60px 20px;
            }

            .promotions-hero h1 {
                font-size: 2.5rem;
            }

            .controls-container {
                flex-direction: column;
                gap: 20px;
                align-items: stretch;
            }

            .sort-controls {
                justify-content: center;
            }

            .products-grid {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
                gap: 20px;
            }
        }
    </style>
</head>
<body>
    <%- include('./partials/header', { page: 'promotions', user: user }) %>

    <!-- Hero Section -->
    <section class="promotions-hero">
        <div class="container">
            <h1>ðŸ”¥ Special Deals & Promotions</h1>
            <p>Discover amazing discounts on your favorite products. Limited time offers!</p>
        </div>
    </section>

    <!-- Controls Section -->
    <section class="promotions-controls">
        <div class="controls-container">
            <div class="sort-controls">
                <span class="sort-label">Sort by:</span>
                <select class="sort-select" onchange="changeSort(this.value)">
                    <option value="newest" <%= sort === 'newest' ? 'selected' : '' %>>Newest</option>
                    <option value="price_low" <%= sort === 'price_low' ? 'selected' : '' %>>Price: Low to High</option>
                    <option value="price_high" <%= sort === 'price_high' ? 'selected' : '' %>>Price: High to Low</option>
                    <option value="discount_high" <%= sort === 'discount_high' ? 'selected' : '' %>>Highest Discount</option>
                    <option value="name" <%= sort === 'name' ? 'selected' : '' %>>Name A-Z</option>
                </select>
            </div>
            <div class="results-count">
                Showing <%= products.length %> of <%= totalProducts %> products
            </div>
        </div>
    </section>

    <!-- Products Section -->
    <section class="products-section">
        <% if (products && products.length > 0) { %>
            <div class="products-grid">
                <% products.forEach(product => { %>
                    <div class="product-card" data-product-id="<%= product.id %>">
                        <div class="product-badge"><%= product.discount %>% OFF</div>
                        <div class="product-image">
                            <img src="<%= product.image_url || '/images/product-placeholder.jpg' %>"
                                 alt="<%= product.name %>">
                            <div class="product-overlay">
                                <button class="quick-view-btn" data-product-id="<%= product.id %>">
                                    <i class="fas fa-eye"></i>
                                    Quick View
                                </button>
                            </div>
                        </div>
                        <div class="product-info">
                            <h3 class="product-title"><%= product.name %></h3>
                            <div class="product-rating">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i>
                                <span class="rating-count">(4.2)</span>
                            </div>
                            <div class="product-price">
                                <span class="price-current">$<%= product.discounted_price %></span>
                                <span class="price-original">$<%= product.price %></span>
                                <span class="price-discount"><%= product.discount %>% OFF</span>
                            </div>
                            <div class="product-savings">
                                You save $<%= product.discount_amount %>
                            </div>
                            <button class="add-to-cart-btn" data-product-id="<%= product.id %>">
                                <i class="fas fa-shopping-cart"></i>
                                Add to Cart
                            </button>
                        </div>
                    </div>
                <% }); %>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <div class="pagination">
                    <% if (page > 1) { %>
                        <a href="?page=<%= page - 1 %>&sort=<%= sort %>" class="pagination-btn">Previous</a>
                    <% } %>

                    <% for (let i = Math.max(1, page - 2); i <= Math.min(totalPages, page + 2); i++) { %>
                        <a href="?page=<%= i %>&sort=<%= sort %>"
                           class="pagination-btn <%= i === page ? 'active' : '' %>"><%= i %></a>
                    <% } %>

                    <% if (page < totalPages) { %>
                        <a href="?page=<%= page + 1 %>&sort=<%= sort %>" class="pagination-btn">Next</a>
                    <% } %>
                </div>
            <% } %>
        <% } else { %>
            <div class="no-products">
                <i class="fas fa-tags"></i>
                <h3>No promotions available</h3>
                <p>Check back later for amazing deals and discounts!</p>
                <a href="/" class="add-to-cart-btn" style="margin-top: 20px; display: inline-flex; text-decoration: none;">
                    <i class="fas fa-home"></i>
                    Back to Home
                </a>
            </div>
        <% } %>
    </section>

    <%- include('./partials/footer') %>

    <!-- Hidden user data -->
    <div id="user-data" style="display: none;" data-logged-in="<%- user ? 'true' : 'false' %>"></div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add event delegation for buttons
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('quick-view-btn') || e.target.closest('.quick-view-btn')) {
                    const button = e.target.classList.contains('quick-view-btn') ? e.target : e.target.closest('.quick-view-btn');
                    const productId = button.dataset.productId;
                    quickView(productId);
                }

                if (e.target.classList.contains('add-to-cart-btn') || e.target.closest('.add-to-cart-btn')) {
                    const button = e.target.classList.contains('add-to-cart-btn') ? e.target : e.target.closest('.add-to-cart-btn');
                    const productId = button.dataset.productId;
                    addToCart(productId);
                }
            });
        });

        function changeSort(sortValue) {
            const url = new URL(window.location);
            url.searchParams.set('sort', sortValue);
            url.searchParams.set('page', '1'); // Reset to first page
            window.location.href = url.toString();
        }

        async function addToCart(productId) {
            const userData = document.getElementById('user-data');
            const isLoggedIn = userData && userData.dataset.loggedIn === 'true';

            if (isLoggedIn) {
                try {
                    const response = await fetch('/api/cart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            product_id: productId,
                            quantity: 1
                        })
                    });

                    const result = await response.json();

                    if (result.success) {
                        showToast('Product added to cart!', 'success');
                        updateCartBadge();
                    } else {
                        if (response.status === 401) {
                            window.location.href = '/login';
                        } else {
                            showToast('Failed to add to cart: ' + result.message, 'error');
                        }
                    }
                } catch (error) {
                    console.error('Error adding to cart:', error);
                    showToast('Error adding to cart', 'error');
                }
            } else {
                // Redirect to login for non-authenticated users
                window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
            }
        }

        function quickView(productId) {
            // For now, redirect to product details. In a full implementation, this would open a modal
            window.location.href = `/products/${productId}`;
        }

        function updateCartBadge() {
            // Update cart badge if it exists
            const cartBadge = document.querySelector('.cart-badge');
            if (cartBadge) {
                const currentCount = parseInt(cartBadge.textContent) || 0;
                cartBadge.textContent = currentCount + 1;
            }
        }

        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            const toastType = type === 'success' ? 'success' : 'error';
            const toastBg = toastType === 'success' ? '#d4edda' : '#f8d7da';
            const toastColor = toastType === 'success' ? '#155724' : '#721c24';
            toast.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: " + toastBg + ";
                color: " + toastColor + ";
                padding: 12px 16px;
                border-radius: 4px;
                box-shadow: 0 2px 8px rgba(0,0,0,0.15);
                z-index: 10000;
                max-width: 300px;
            `;
            toast.textContent = message;

            document.body.appendChild(toast);

            setTimeout(() => {
                toast.remove();
            }, 3000);
        }
    </script>
    <script src="/script.js"></script>
</body>
</html>