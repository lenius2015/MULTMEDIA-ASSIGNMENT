<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logs & Security - OMUNJU SHOPPERS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/admin.css">
    <style>
        .logs-container {
            padding: 20px;
        }

        .logs-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .logs-title {
            font-size: 2rem;
            color: #2c3e50;
            margin: 0;
        }

        .logs-controls {
            display: flex;
            gap: 15px;
            align-items: center;
            flex-wrap: wrap;
        }

        .log-filter {
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
            background: white;
        }

        .filter-group {
            display: flex;
            gap: 10px;
            align-items: center;
            flex-wrap: wrap;
        }

        .filter-label {
            font-size: 0.9rem;
            font-weight: 500;
            color: #2c3e50;
            margin-right: 5px;
        }

        .date-filter {
            display: flex;
            gap: 8px;
            align-items: center;
        }

        .date-input {
            padding: 6px 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 0.9rem;
        }

        .filter-actions {
            display: flex;
            gap: 8px;
            align-items: center;
        }

        .btn-filter {
            background: #3498db;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .btn-filter:hover {
            background: #2980b9;
        }

        .btn-clear-filters {
            background: #95a5a6;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 0.9rem;
        }

        .btn-clear-filters:hover {
            background: #7f8c8d;
        }

        .btn-export {
            background: #27ae60;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .btn-export:hover {
            background: #229954;
        }

        .btn-clear {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
            color: white;
            border: none;
            padding: 10px 16px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-clear:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(231, 76, 60, 0.3);
        }

        .logs-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 30px;
        }

        .logs-section {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.07);
            overflow: hidden;
        }

        .section-header {
            background: #f8f9fa;
            padding: 20px;
            border-bottom: 1px solid #ecf0f1;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .section-title {
            font-size: 1.3rem;
            color: #2c3e50;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .section-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
        }

        .icon-security { background: linear-gradient(135deg, #e74c3c, #c0392b); color: white; }
        .icon-activity { background: linear-gradient(135deg, #3498db, #2980b9); color: white; }
        .icon-errors { background: linear-gradient(135deg, #f39c12, #e67e22); color: white; }
        .icon-access { background: linear-gradient(135deg, #27ae60, #229954); color: white; }

        .logs-content {
            max-height: 500px;
            overflow-y: auto;
        }

        .log-entry {
            padding: 15px 20px;
            border-bottom: 1px solid #f8f9fa;
            display: flex;
            align-items: flex-start;
            gap: 15px;
            position: relative;
        }

        .log-entry:last-child {
            border-bottom: none;
        }

        .log-entry:hover {
            background: #f8f9fa;
        }

        .log-time {
            font-size: 0.85rem;
            color: #7f8c8d;
            min-width: 140px;
        }

        .log-content {
            flex: 1;
        }

        .log-message {
            font-weight: 500;
            color: #2c3e50;
            margin-bottom: 4px;
        }

        .log-details {
            font-size: 0.9rem;
            color: #7f8c8d;
            margin-bottom: 8px;
        }

        .log-meta {
            display: flex;
            gap: 15px;
            font-size: 0.8rem;
            color: #95a5a6;
            flex-wrap: wrap;
        }

        .log-meta-item {
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .log-actions {
            display: flex;
            gap: 8px;
            opacity: 0;
            transition: opacity 0.2s ease;
        }

        .log-entry:hover .log-actions {
            opacity: 1;
        }

        .btn-log-action {
            padding: 4px 8px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.8rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .btn-view {
            background: #3498db;
            color: white;
        }

        .btn-view:hover {
            background: #2980b9;
        }

        .btn-delete {
            background: #e74c3c;
            color: white;
        }

        .btn-delete:hover {
            background: #c0392b;
        }

        .log-level {
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .level-error { background: #fee; color: #e74c3c; }
        .level-warning { background: #fff8e1; color: #f39c12; }
        .level-info { background: #e8f4fd; color: #3498db; }
        .level-success { background: #e8f5e8; color: #27ae60; }

        .security-status {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .status-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.07);
            padding: 25px;
            text-align: center;
        }

        .status-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin: 0 auto 15px;
        }

        .status-good { background: #d4edda; color: #155724; }
        .status-warning { background: #fff3cd; color: #856404; }
        .status-danger { background: #f8d7da; color: #721c24; }

        .status-value {
            font-size: 2rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 8px;
        }

        .status-label {
            color: #7f8c8d;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .no-logs {
            text-align: center;
            padding: 40px;
            color: #7f8c8d;
        }

        .no-logs i {
            font-size: 3rem;
            margin-bottom: 15px;
            display: block;
        }

        .log-actions {
            display: flex;
            gap: 10px;
        }

        .btn-refresh {
            background: #3498db;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 0.9rem;
        }

        .btn-refresh:hover {
            background: #2980b9;
        }

        @media (max-width: 768px) {
            .logs-grid {
                grid-template-columns: 1fr;
            }

            .logs-header {
                flex-direction: column;
                gap: 20px;
                align-items: flex-start;
            }

            .logs-controls {
                width: 100%;
                justify-content: space-between;
            }
        }
    </style>
</head>
<body>
    <%- include('./partials/sidebar', { currentPage: 'logs' }) %>

    <div class="admin-main">
        <%- include('./partials/header', { pageTitle: 'Logs & Security Monitoring' }) %>

        <main class="admin-content">
            <div class="logs-container">
                <!-- Header -->
                <div class="logs-header">
                    <h1 class="logs-title">Logs & Security Monitoring</h1>
                    <div class="logs-controls">
                        <div class="filter-group">
                            <div class="filter-item">
                                <span class="filter-label">Type:</span>
                                <select class="log-filter" id="logTypeFilter">
                                    <option value="all">All Types</option>
                                    <option value="security">Security</option>
                                    <option value="activity">Activity</option>
                                    <option value="error">Errors</option>
                                    <option value="access">Access</option>
                                </select>
                            </div>

                            <div class="filter-item">
                                <span class="filter-label">Level:</span>
                                <select class="log-filter" id="logLevelFilter">
                                    <option value="all">All Levels</option>
                                    <option value="info">Info</option>
                                    <option value="warning">Warning</option>
                                    <option value="error">Error</option>
                                    <option value="critical">Critical</option>
                                </select>
                            </div>

                            <div class="filter-item date-filter">
                                <span class="filter-label">Date Range:</span>
                                <input type="date" class="date-input" id="startDate" placeholder="Start Date">
                                <span>to</span>
                                <input type="date" class="date-input" id="endDate" placeholder="End Date">
                            </div>

                            <div class="filter-item">
                                <span class="filter-label">User:</span>
                                <input type="text" class="log-filter" id="userFilter" placeholder="User ID or Email">
                            </div>

                            <div class="filter-item">
                                <span class="filter-label">IP:</span>
                                <input type="text" class="log-filter" id="ipFilter" placeholder="IP Address">
                            </div>
                        </div>

                        <div class="filter-actions">
                            <button class="btn-filter" onclick="applyFilters()">
                                <i class="fas fa-filter"></i>
                                Apply Filters
                            </button>
                            <button class="btn-clear-filters" onclick="clearFilters()">
                                <i class="fas fa-times"></i>
                                Clear
                            </button>
                            <button class="btn-export" onclick="exportLogs()">
                                <i class="fas fa-download"></i>
                                Export
                            </button>
                            <button class="btn-refresh" onclick="refreshLogs()">
                                <i class="fas fa-sync-alt"></i>
                            </button>
                            <button class="btn-clear" onclick="clearLogs()">
                                <i class="fas fa-trash"></i>
                                Clear Old Logs
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Security Status Overview -->
                <div class="security-status">
                    <div class="status-card">
                        <div class="status-icon status-good">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div class="status-value"><%= security.failedLogins || 0 %></div>
                        <div class="status-label">Failed Login Attempts (24h)</div>
                    </div>

                    <div class="status-card">
                        <div class="status-icon status-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="status-value"><%= security.suspiciousActivities || 0 %></div>
                        <div class="status-label">Suspicious Activities</div>
                    </div>

                    <div class="status-card">
                        <div class="status-icon status-good">
                            <i class="fas fa-lock"></i>
                        </div>
                        <div class="status-value"><%= security.activeSessions || 0 %></div>
                        <div class="status-label">Active User Sessions</div>
                    </div>

                    <div class="status-card">
                        <div class="status-icon status-danger">
                            <i class="fas fa-ban"></i>
                        </div>
                        <div class="status-value"><%= security.blockedIPs || 0 %></div>
                        <div class="status-label">Blocked IP Addresses</div>
                    </div>
                </div>

                <!-- Logs Sections -->
                <div class="logs-grid">
                    <!-- Security Logs -->
                    <div class="logs-section">
                        <div class="section-header">
                            <h3 class="section-title">
                                <span class="section-icon icon-security">
                                    <i class="fas fa-shield-alt"></i>
                                </span>
                                Security Logs
                            </h3>
                        </div>
                        <div class="logs-content" id="securityLogs">
                            <% if (logs.security && logs.security.length > 0) { %>
                                <% logs.security.forEach(log => { %>
                                    <div class="log-entry" data-log-id="<%= log.id %>" data-log-type="security">
                                        <div class="log-time">
                                            <%= log.user_timezone_timestamp ? new Date(log.user_timezone_timestamp).toLocaleString() : new Date(log.created_at).toLocaleString() %>
                                            <br>
                                            <small><%= log.time_zone || 'UTC' %></small>
                                        </div>
                                        <div class="log-content">
                                            <div class="log-message">
                                                <span class="log-level level-<%= log.level || 'info' %>"><%= log.level || 'info' %></span>
                                                <%= log.message %>
                                            </div>
                                            <div class="log-details">
                                                <%= log.url ? `URL: ${log.url} | ` : '' %>Method: <%= log.method || 'N/A' %>
                                            </div>
                                            <div class="log-meta">
                                                <span class="log-meta-item">
                                                    <i class="fas fa-globe"></i>
                                                    <%= log.ip || 'N/A' %>
                                                </span>
                                                <% if (log.user_id) { %>
                                                    <span class="log-meta-item">
                                                        <i class="fas fa-user"></i>
                                                        <%= log.user_id %>
                                                    </span>
                                                <% } %>
                                                <% if (log.browser) { %>
                                                    <span class="log-meta-item">
                                                        <i class="fas fa-desktop"></i>
                                                        <%= log.browser %> <%= log.browser_version || '' %>
                                                    </span>
                                                <% } %>
                                                <% if (log.device_type) { %>
                                                    <span class="log-meta-item">
                                                        <i class="fas fa-mobile-alt"></i>
                                                        <%= log.device_type %>
                                                    </span>
                                                <% } %>
                                                <% if (log.os) { %>
                                                    <span class="log-meta-item">
                                                        <i class="fab fa-<%= log.os.toLowerCase() === 'windows' ? 'windows' : log.os.toLowerCase() === 'macos' ? 'apple' : log.os.toLowerCase() === 'linux' ? 'linux' : 'android' %>"></i>
                                                        <%= log.os %> <%= log.os_version || '' %>
                                                    </span>
                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="log-actions">
                                            <button class="btn-log-action btn-view" data-log-id="<%= log.id %>" data-log-type="security" data-action="view">
                                                <i class="fas fa-eye"></i>
                                                View
                                            </button>
                                            <button class="btn-log-action btn-delete" data-log-id="<%= log.id %>" data-log-type="security" data-action="delete">
                                                <i class="fas fa-trash"></i>
                                                Delete
                                            </button>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="no-logs">
                                    <i class="fas fa-shield-alt"></i>
                                    <p>No security logs available</p>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Activity Logs -->
                    <div class="logs-section">
                        <div class="section-header">
                            <h3 class="section-title">
                                <span class="section-icon icon-activity">
                                    <i class="fas fa-user-clock"></i>
                                </span>
                                User Activity Logs
                            </h3>
                        </div>
                        <div class="logs-content" id="activityLogs">
                            <% if (logs.activity && logs.activity.length > 0) { %>
                                <% logs.activity.forEach(log => { %>
                                    <div class="log-entry">
                                        <div class="log-time"><%= new Date(log.timestamp).toLocaleString() %></div>
                                        <div class="log-content">
                                            <div class="log-message">
                                                <span class="log-level level-info">activity</span>
                                                <%= log.message %>
                                            </div>
                                            <div class="log-details">
                                                User: <%= log.user || 'N/A' %> | Action: <%= log.action || 'N/A' %>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="no-logs">
                                    <i class="fas fa-user-clock"></i>
                                    <p>No activity logs available</p>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Error Logs -->
                    <div class="logs-section">
                        <div class="section-header">
                            <h3 class="section-title">
                                <span class="section-icon icon-errors">
                                    <i class="fas fa-exclamation-triangle"></i>
                                </span>
                                Error Logs
                            </h3>
                        </div>
                        <div class="logs-content" id="errorLogs">
                            <% if (logs.errors && logs.errors.length > 0) { %>
                                <% logs.errors.forEach(log => { %>
                                    <div class="log-entry">
                                        <div class="log-time"><%= new Date(log.timestamp).toLocaleString() %></div>
                                        <div class="log-content">
                                            <div class="log-message">
                                                <span class="log-level level-error">error</span>
                                                <%= log.message %>
                                            </div>
                                            <div class="log-details">
                                                File: <%= log.file || 'N/A' %> | Line: <%= log.line || 'N/A' %>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="no-logs">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    <p>No error logs available</p>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Access Logs -->
                    <div class="logs-section">
                        <div class="section-header">
                            <h3 class="section-title">
                                <span class="section-icon icon-access">
                                    <i class="fas fa-globe"></i>
                                </span>
                                Access Logs
                            </h3>
                        </div>
                        <div class="logs-content" id="accessLogs">
                            <% if (logs.access && logs.access.length > 0) { %>
                                <% logs.access.forEach(log => { %>
                                    <div class="log-entry">
                                        <div class="log-time"><%= new Date(log.timestamp).toLocaleString() %></div>
                                        <div class="log-content">
                                            <div class="log-message">
                                                <span class="log-level level-info">access</span>
                                                <%= log.method %> <%= log.url %>
                                            </div>
                                            <div class="log-details">
                                                IP: <%= log.ip %> | Status: <%= log.status %> | User Agent: <%= log.userAgent ? log.userAgent.substring(0, 50) + '...' : 'N/A' %>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="no-logs">
                                    <i class="fas fa-globe"></i>
                                    <p>No access logs available</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        // Log management functions
        function refreshLogs() {
            location.reload();
        }

        function clearLogs() {
            if (confirm('Are you sure you want to clear logs older than 7 days? This action cannot be undone.')) {
                fetch('/admin/logs/clear', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Old logs cleared successfully');
                        location.reload();
                    } else {
                        alert('Failed to clear logs: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error clearing logs:', error);
                    alert('Error clearing logs');
                });
            }
        }

        function applyFilters() {
            const typeFilter = document.getElementById('logTypeFilter').value;
            const levelFilter = document.getElementById('logLevelFilter').value;
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            const userFilter = document.getElementById('userFilter').value.trim();
            const ipFilter = document.getElementById('ipFilter').value.trim();

            // Build query parameters
            const params = new URLSearchParams();
            if (typeFilter !== 'all') params.append('type', typeFilter);
            if (levelFilter !== 'all') params.append('level', levelFilter);
            if (startDate) params.append('startDate', startDate);
            if (endDate) params.append('endDate', endDate);
            if (userFilter) params.append('user', userFilter);
            if (ipFilter) params.append('ip', ipFilter);

            // Redirect with filters
            window.location.href = `/admin/logs?${params.toString()}`;
        }

        function clearFilters() {
            document.getElementById('logTypeFilter').value = 'all';
            document.getElementById('logLevelFilter').value = 'all';
            document.getElementById('startDate').value = '';
            document.getElementById('endDate').value = '';
            document.getElementById('userFilter').value = '';
            document.getElementById('ipFilter').value = '';
            window.location.href = '/admin/logs';
        }

        function exportLogs() {
            const typeFilter = document.getElementById('logTypeFilter').value;
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;

            if (typeFilter === 'all') {
                alert('Please select a specific log type to export');
                return;
            }

            const format = confirm('Export as CSV? (Cancel for JSON)') ? 'csv' : 'json';
            let url = `/admin/logs/export/${typeFilter}?format=${format}`;

            if (startDate) url += `&startDate=${startDate}`;
            if (endDate) url += `&endDate=${endDate}`;

            window.open(url, '_blank');
        }

        function viewLogDetails(logId, logType) {
            // Fetch detailed log information
            fetch(`/admin/logs/${logType}/${logId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showLogDetailsModal(data.log);
                    } else {
                        alert('Failed to fetch log details: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error fetching log details:', error);
                    alert('Error fetching log details');
                });
        }

        function deleteLog(logId, logType) {
            if (confirm('Are you sure you want to delete this log entry?')) {
                fetch(`/admin/logs/${logType}/${logId}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Log entry deleted successfully');
                        location.reload();
                    } else {
                        alert('Failed to delete log entry: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error deleting log entry:', error);
                    alert('Error deleting log entry');
                });
            }
        }

        function showLogDetailsModal(log) {
            // Create modal for log details
            const modal = document.createElement('div');
            modal.className = 'log-details-modal';
            modal.innerHTML = `
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>Log Details</h3>
                        <button class="modal-close" onclick="this.closest('.log-details-modal').remove()">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="detail-grid">
                            <div class="detail-item"><strong>ID:</strong> ${log.id}</div>
                            <div class="detail-item"><strong>Level:</strong> ${log.level || 'N/A'}</div>
                            <div class="detail-item"><strong>Message:</strong> ${log.message}</div>
                            <div class="detail-item"><strong>Timestamp:</strong> ${log.user_timezone_timestamp ? new Date(log.user_timezone_timestamp).toLocaleString() : new Date(log.created_at).toLocaleString()}</div>
                            <div class="detail-item"><strong>Time Zone:</strong> ${log.time_zone || 'UTC'}</div>
                            <div class="detail-item"><strong>IP Address:</strong> ${log.ip || 'N/A'}</div>
                            <div class="detail-item"><strong>User ID:</strong> ${log.user_id || 'N/A'}</div>
                            <div class="detail-item"><strong>Browser:</strong> ${log.browser || 'N/A'} ${log.browser_version || ''}</div>
                            <div class="detail-item"><strong>Device Type:</strong> ${log.device_type || 'N/A'}</div>
                            <div class="detail-item"><strong>OS:</strong> ${log.os || 'N/A'} ${log.os_version || ''}</div>
                            ${log.url ? `<div class="detail-item"><strong>URL:</strong> ${log.url}</div>` : ''}
                            ${log.method ? `<div class="detail-item"><strong>Method:</strong> ${log.method}</div>` : ''}
                            ${log.user_agent ? `<div class="detail-item"><strong>User Agent:</strong> ${log.user_agent}</div>` : ''}
                        </div>
                    </div>
                </div>
            `;
            document.body.appendChild(modal);
        }

        // Event delegation for log actions
        document.addEventListener('click', function(e) {
            const button = e.target.closest('.btn-log-action');
            if (!button) return;

            const logId = button.getAttribute('data-log-id');
            const logType = button.getAttribute('data-log-type');
            const action = button.getAttribute('data-action');

            if (action === 'view') {
                viewLogDetails(logId, logType);
            } else if (action === 'delete') {
                deleteLog(logId, logType);
            }
        });

        // Auto-refresh logs every 30 seconds
        setInterval(refreshLogs, 30000);

        // Initialize date inputs with current date range
        document.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            document.getElementById('logTypeFilter').value = urlParams.get('type') || 'all';
            document.getElementById('logLevelFilter').value = urlParams.get('level') || 'all';
            document.getElementById('startDate').value = urlParams.get('startDate') || '';
            document.getElementById('endDate').value = urlParams.get('endDate') || '';
            document.getElementById('userFilter').value = urlParams.get('user') || '';
            document.getElementById('ipFilter').value = urlParams.get('ip') || '';
        });
    </script>

