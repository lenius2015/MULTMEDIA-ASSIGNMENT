<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Security Settings - OMUNJU SHOPPERS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/admin.css">
    <style>
        .security-settings {
            padding: 20px;
        }

        .settings-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .settings-title {
            font-size: 2rem;
            color: #2c3e50;
            margin: 0;
        }

        .security-overview {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .security-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.07);
            padding: 25px;
            text-align: center;
            border-left: 4px solid #27ae60;
        }

        .security-card.warning {
            border-left-color: #f39c12;
        }

        .security-card.danger {
            border-left-color: #e74c3c;
        }

        .security-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin: 0 auto 15px;
        }

        .security-good { background: #d4edda; color: #155724; }
        .security-warning { background: #fff3cd; color: #856404; }
        .security-danger { background: #f8d7da; color: #721c24; }

        .security-value {
            font-size: 2rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 8px;
        }

        .security-label {
            color: #7f8c8d;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .settings-section {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.07);
            margin-bottom: 20px;
            overflow: hidden;
        }

        .section-header {
            background: #f8f9fa;
            padding: 20px;
            border-bottom: 1px solid #ecf0f1;
        }

        .section-title {
            font-size: 1.3rem;
            color: #2c3e50;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .section-content {
            padding: 20px;
        }

        .settings-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }

        .setting-group {
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            padding: 20px;
        }

        .setting-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .setting-field {
            margin-bottom: 15px;
        }

        .setting-field:last-child {
            margin-bottom: 0;
        }

        .field-label {
            display: block;
            font-size: 0.9rem;
            font-weight: 500;
            color: #2c3e50;
            margin-bottom: 5px;
        }

        .field-input {
            width: 100%;
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 14px;
        }

        .field-input:focus {
            outline: none;
            border-color: #3498db;
            box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
        }

        .checkbox-field {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .checkbox-field input[type="checkbox"] {
            width: auto;
            margin: 0;
        }

        .actions-section {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.07);
            padding: 20px;
            margin-bottom: 20px;
        }

        .actions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
        }

        .action-btn {
            padding: 12px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 500;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.2s;
        }

        .btn-primary {
            background: #3498db;
            color: white;
        }

        .btn-primary:hover {
            background: #2980b9;
        }

        .btn-success {
            background: #27ae60;
            color: white;
        }

        .btn-success:hover {
            background: #229954;
        }

        .btn-warning {
            background: #f39c12;
            color: white;
        }

        .btn-warning:hover {
            background: #e67e22;
        }

        .btn-danger {
            background: #e74c3c;
            color: white;
        }

        .btn-danger:hover {
            background: #c0392b;
        }

        .security-notice {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .security-notice h4 {
            margin: 0 0 10px 0;
            color: #856404;
        }

        .security-notice p {
            margin: 0;
            color: #856404;
            font-size: 0.9rem;
        }

        @media (max-width: 768px) {
            .settings-grid {
                grid-template-columns: 1fr;
            }

            .actions-grid {
                grid-template-columns: 1fr;
            }

            .security-overview {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <%- include('./partials/sidebar', { currentPage: 'security' }) %>

    <div class="admin-main">
        <%- include('./partials/header', { pageTitle: 'Security Settings' }) %>

        <main class="admin-content">
            <div class="security-settings">
                <!-- Header -->
                <div class="settings-header">
                    <h1 class="settings-title">Security Settings</h1>
                    <div>
                        <a href="/admin/management/security-audit" class="btn btn-warning">
                            <i class="fas fa-history"></i>
                            View Audit Log
                        </a>
                    </div>
                </div>

                <!-- Security Overview -->
                <div class="security-overview">
                    <div class="security-card">
                        <div class="security-icon security-good">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div class="security-value"><%= statistics.failedLogins %></div>
                        <div class="security-label">Failed Login Attempts (24h)</div>
                    </div>

                    <div class="security-card warning">
                        <div class="security-icon security-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="security-value"><%= statistics.suspiciousActivities %></div>
                        <div class="security-label">Suspicious Activities (24h)</div>
                    </div>

                    <div class="security-card danger">
                        <div class="security-icon security-danger">
                            <i class="fas fa-user-slash"></i>
                        </div>
                        <div class="security-value"><%= statistics.blockedUsers %></div>
                        <div class="security-label">Blocked Users</div>
                    </div>

                    <div class="security-card danger">
                        <div class="security-icon security-danger">
                            <i class="fas fa-user-times"></i>
                        </div>
                        <div class="security-value"><%= statistics.blockedAdmins %></div>
                        <div class="security-label">Blocked Admins</div>
                    </div>
                </div>

                <!-- Security Notice -->
                <div class="security-notice">
                    <h4><i class="fas fa-info-circle"></i> Security Notice</h4>
                    <p>These settings control the security of your application. Changes may require a server restart to take effect. Only the original super administrator can modify these settings.</p>
                </div>

                <!-- Rate Limiting Settings -->
                <div class="settings-section">
                    <div class="section-header">
                        <h3 class="section-title">
                            <i class="fas fa-tachometer-alt"></i>
                            Rate Limiting
                        </h3>
                    </div>
                    <div class="section-content">
                        <div class="settings-grid">
                            <div class="setting-group">
                                <h4 class="setting-title">General Rate Limiting</h4>
                                <div class="setting-field">
                                    <label class="field-label">Max Requests per Window</label>
                                    <input type="number" class="field-input" name="rateLimit[maxRequests]" value="<%= settings.rateLimit.maxRequests %>" min="10" max="1000">
                                </div>
                                <div class="setting-field">
                                    <label class="field-label">Window Duration (minutes)</label>
                                    <input type="number" class="field-input" name="rateLimit[windowMs]" value="<%= Math.floor(settings.rateLimit.windowMs / 60000) %>" min="1" max="60">
                                </div>
                            </div>

                            <div class="setting-group">
                                <h4 class="setting-title">Authentication Rate Limiting</h4>
                                <div class="setting-field">
                                    <label class="field-label">Max Login Attempts per Window</label>
                                    <input type="number" class="field-input" name="rateLimit[authMaxAttempts]" value="<%= settings.rateLimit.authMaxAttempts %>" min="3" max="10">
                                </div>
                                <p style="font-size: 0.8rem; color: #7f8c8d; margin-top: 10px;">
                                    Limits authentication attempts to prevent brute force attacks.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Password Policy -->
                <div class="settings-section">
                    <div class="section-header">
                        <h3 class="section-title">
                            <i class="fas fa-key"></i>
                            Password Policy
                        </h3>
                    </div>
                    <div class="section-content">
                        <div class="settings-grid">
                            <div class="setting-group">
                                <div class="setting-field">
                                    <label class="field-label">Minimum Password Length</label>
                                    <input type="number" class="field-input" name="passwordPolicy[minLength]" value="<%= settings.passwordPolicy.minLength %>" min="6" max="128">
                                </div>
                                <div class="setting-field checkbox-field">
                                    <input type="checkbox" name="passwordPolicy[requireUppercase]" <%= settings.passwordPolicy.requireUppercase ? 'checked' : '' %>>
                                    <label>Require uppercase letters</label>
                                </div>
                                <div class="setting-field checkbox-field">
                                    <input type="checkbox" name="passwordPolicy[requireLowercase]" <%= settings.passwordPolicy.requireLowercase ? 'checked' : '' %>>
                                    <label>Require lowercase letters</label>
                                </div>
                            </div>

                            <div class="setting-group">
                                <div class="setting-field checkbox-field">
                                    <input type="checkbox" name="passwordPolicy[requireNumbers]" <%= settings.passwordPolicy.requireNumbers ? 'checked' : '' %>>
                                    <label>Require numbers</label>
                                </div>
                                <div class="setting-field checkbox-field">
                                    <input type="checkbox" name="passwordPolicy[requireSymbols]" <%= settings.passwordPolicy.requireSymbols ? 'checked' : '' %>>
                                    <label>Require special characters</label>
                                </div>
                                <p style="font-size: 0.8rem; color: #7f8c8d; margin-top: 10px;">
                                    Strong password requirements help prevent unauthorized access.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Session Security -->
                <div class="settings-section">
                    <div class="section-header">
                        <h3 class="section-title">
                            <i class="fas fa-user-shield"></i>
                            Session Security
                        </h3>
                    </div>
                    <div class="section-content">
                        <div class="settings-grid">
                            <div class="setting-group">
                                <div class="setting-field">
                                    <label class="field-label">Session Max Age (hours)</label>
                                    <input type="number" class="field-input" name="sessionSecurity[maxAge]" value="<%= Math.floor(settings.sessionSecurity.maxAge / 3600000) %>" min="1" max="168">
                                </div>
                                <div class="setting-field checkbox-field">
                                    <input type="checkbox" name="sessionSecurity[secure]" <%= settings.sessionSecurity.secure ? 'checked' : '' %>>
                                    <label>Require HTTPS (secure cookies)</label>
                                </div>
                            </div>

                            <div class="setting-group">
                                <div class="setting-field">
                                    <label class="field-label">SameSite Policy</label>
                                    <select class="field-input" name="sessionSecurity[sameSite]">
                                        <option value="strict" <%= settings.sessionSecurity.sameSite === 'strict' ? 'selected' : '' %>>Strict</option>
                                        <option value="lax" <%= settings.sessionSecurity.sameSite === 'lax' ? 'selected' : '' %>>Lax</option>
                                        <option value="none" <%= settings.sessionSecurity.sameSite === 'none' ? 'selected' : '' %>>None</option>
                                    </select>
                                </div>
                                <p style="font-size: 0.8rem; color: #7f8c8d; margin-top: 10px;">
                                    Controls cross-site request protection for cookies.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="actions-section">
                    <h3 style="margin-bottom: 15px; color: #2c3e50;">Quick Security Actions</h3>
                    <div class="actions-grid">
                        <button class="action-btn btn-success" onclick="runSecurityScan()">
                            <i class="fas fa-search"></i>
                            Run Security Scan
                        </button>
                        <button class="action-btn btn-warning" onclick="clearSecurityLogs()">
                            <i class="fas fa-trash"></i>
                            Clear Old Security Logs
                        </button>
                        <button class="action-btn btn-danger" onclick="emergencyLockdown()">
                            <i class="fas fa-lock"></i>
                            Emergency Lockdown
                        </button>
                        <button class="action-btn btn-primary" onclick="saveSettings()">
                            <i class="fas fa-save"></i>
                            Save Settings
                        </button>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        function saveSettings() {
            const formData = new FormData();
            const inputs = document.querySelectorAll('input, select');

            inputs.forEach(input => {
                if (input.type === 'checkbox') {
                    formData.append(input.name, input.checked);
                } else {
                    formData.append(input.name, input.value);
                }
            });

            const data = {};
            for (let [key, value] of formData.entries()) {
                const keys = key.split('[').map(k => k.replace(']', ''));
                let current = data;

                for (let i = 0; i < keys.length - 1; i++) {
                    if (!current[keys[i]]) current[keys[i]] = {};
                    current = current[keys[i]];
                }

                current[keys[keys.length - 1]] = value === 'true' ? true : value === 'false' ? false : value;
            }

            fetch('/admin/management/security-settings', {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showToast(data.message, 'success');
                } else {
                    showToast(data.message || 'Failed to save settings', 'error');
                }
            })
            .catch(error => {
                console.error('Error saving settings:', error);
                showToast('Failed to save settings', 'error');
            });
        }

        function runSecurityScan() {
            showToast('Security scan started...', 'info');

            // Simulate security scan
            setTimeout(() => {
                showToast('Security scan completed. No issues found.', 'success');
            }, 3000);
        }

        function clearSecurityLogs() {
            if (confirm('Are you sure you want to clear old security logs? This action cannot be undone.')) {
                fetch('/admin/logs/clear', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ days: 30 })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showToast(data.message, 'success');
                    } else {
                        showToast('Failed to clear logs', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error clearing logs:', error);
                    showToast('Failed to clear logs', 'error');
                });
            }
        }

        function emergencyLockdown() {
            if (confirm('Are you sure you want to activate emergency lockdown? This will block all new logins.')) {
                // This would implement emergency lockdown logic
                showToast('Emergency lockdown activated', 'warning');
            }
        }

        function showToast(message, type = 'info') {
            // Simple toast implementation
            alert(message);
        }
    </script>
</body>
</html>